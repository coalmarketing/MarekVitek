                                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </div>
                            </div>
                            {% endif %}
                            
                            <!-- Content -->
                            <div class="p-4 sm:p-5 md:p-6 {% if loop.index == 1 %}lg:p-8 flex-[1] flex flex-col justify-end{% endif %} flex flex-col justify-between {% if loop.index != 1 %}flex-1{% endif %} relative z-10 bg-gradient-to-t from-gray-900/70 via-gray-900/30 to-transparent backdrop-blur-sm">
                                {% if loop.index == 1 %}
                                <!-- Large card layout - title at bottom -->
                                <div class="mt-auto">
                                    <!-- Additional features for the main card -->
                                    <div class="hidden md:block space-y-3 mb-6">
                                        <div class="flex items-center text-gray-200 text-sm">
                                            <svg class="w-4 h-4 mr-2 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                            <span>Dálkové ovládání</span>
                                        </div>
                                        <div class="flex items-center text-gray-200 text-sm">
                                            <svg class="w-4 h-4 mr-2 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                            <span>Bezpečnostní senzory</span>
                                        </div>
                                        <div class="flex items-center text-gray-200 text-sm">
                                            <svg class="w-4 h-4 mr-2 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                            <span>Kvalitní materiály</span>
                                        </div>
                                    </div>
                                    
                                    <h3 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-white mb-2 md:mb-3 drop-shadow-2xl group-hover:text-brand-orange transition-colors duration-300 leading-tight" style="text-shadow: 0 2px 12px rgba(0,0,0,0.9), 0 1px 4px rgba(0,0,0,0.8);">
                                        {{ product.name }}
                                    </h3>
                                    <p class="text-gray-100 text-base sm:text-lg md:text-xl leading-relaxed mb-4 md:mb-6 opacity-95" style="text-shadow: 0 1px 8px rgba(0,0,0,0.8);">
                                        {{ product.description }}
                                    </p>
                                    
                                    <!-- CTA -->
                                    <div class="flex items-center text-white/80 text-sm sm:text-base font-medium group-hover:text-white transition-colors duration-300">
                                        <span>Zobrazit produkt</span>
                                        <svg class="w-4 h-4 sm:w-5 sm:h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                </div>
                                {% else %}
                                <!-- Regular card layout -->
                                <div>
                                    <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-2 md:mb-6 drop-shadow-2xl group-hover:{% if product.color == 'orange' %}text-brand-orange{% elif product.color == 'blue' %}text-brand-blue{% elif product.color == 'green' %}text-green-400{% else %}text-purple-400{% endif %} transition-colors duration-300 leading-tight" style="text-shadow: 0 2px 12px rgba(0,0,0,0.9), 0 1px 4px rgba(0,0,0,0.8);">
                                        {{ product.name }}
                                    </h3>
                                    <p class="text-gray-100 text-sm sm:text-base md:text-base leading-relaxed mb-3 md:mb-4 opacity-95" style="text-shadow: 0 1px 8px rgba(0,0,0,0.8);">
                                        {{ product.description }}
                                    </p>
                                </div>
                                
                                <!-- CTA -->
                                <div class="flex items-center text-white/80 text-xs sm:text-sm font-medium group-hover:text-white transition-colors duration-300 mt-auto">
                                    <span>Zobrazit produkt</span>
                                    <svg class="w-3 h-3 sm:w-4 sm:h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </div>
                                {% endif %}
                            </div>
                            
                            <!-- Card glow on hover -->
                            <div class="absolute inset-0 bg-gradient-to-br {% if product.color == 'orange' %}from-brand-orange/10{% elif product.color == 'blue' %}from-brand-blue/10{% elif product.color == 'green' %}from-green-500/10{% else %}from-purple-500/10{% endif %} to-transparent rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        </a>
                        
                        <!-- Floating badge -->
                        {% if loop.index == 1 %}
                        <div class="absolute -top-2 -left-2 sm:-top-3 sm:-left-3 md:-top-4 md:-left-4 bg-gradient-to-br from-brand-orange to-orange-500 rounded-xl md:rounded-2xl px-2 py-1 sm:px-3 sm:py-1 md:px-4 md:py-2 shadow-lg z-10">
                            <span class="text-white text-xs font-semibold">Nejpopulárnější</span>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                
                <!-- Bottom CTA -->
                
            </div>
        </div>
    </section>

    <!-- CONTACT SECTION -->
    <section class="py-24 ~px-4/8 border-y ">
        <div class="container m-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
                
                <!-- LEFT SIDE - HOW TO GET QUOTE -->
                <div class="lg:col-span-1 space-y-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">{{ contact.leftSide.heading }}</h2>
                    
                    <!-- Steps -->
                    <div class="space-y-6">
                        {% for step in contact.leftSide.steps %}
                        <div class="flex gap-4 border-l-2 border-gray-800 items-center ">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                {% if step.icon == "search" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                {% elif step.icon == "form" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                {% elif step.icon == "email" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">{{ step.heading }}</h3>
                                <p class="text-gray-600 text-sm">{{ step.text }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <!-- Quick Contact Box -->
                    <div class="bg-white p-6 rounded-lg border-2 border-dashed border-gray-300 text-center">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h4 class="font-semibold text-gray-900 mb-2">{{ contact.leftSide.quickContact.heading }}</h4>
                        <p class="text-gray-600 text-sm mb-4">{{ contact.leftSide.quickContact.text }}</p>
                        <a href="tel:{{ contact.leftSide.quickContact.phone }}" class="inline-block bg-brand-orange border-2 border-brand-orange text-white px-6 py-2 rounded-lg font-semibold hover:bg-transparent hover:text-brand-orange transition-colors duration-300">
                            {{ contact.leftSide.quickContact.phone }}
                        </a>
                    </div>
                </div>
                
                <!-- RIGHT SIDE - CONTACT FORM -->
                <div class="lg:col-span-2 bg-brand-blue lg:rounded-3xl rounded-2xl lg:p-6 p-2">
                    <div class="bg-brand-blue border-2 rounded-xl border-brand-orange lg:p-6 p-4">
                        <h2 class="text-2xl font-bold text-white mb-2 text-center">{{ contact.rightSide.heading }}</h2>
                        <p class="text-gray-300 text-sm mb-8 text-center">{{ contact.rightSide.subtitle }}</p>
                        
                        <form class="space-y-6" action="/kontakt/success/" method="POST" data-netlify="true" netlify>
                            <input type="hidden" name="form-name" value="home-contact">
                            <input type="hidden" name="subject" value="Poptávka - {{ title }}">
                            
                            <!-- Personal Info Row -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                    </svg>
                                    {{ contact.rightSide.form.nameLabel }}
                                </div>
                                <input type="text" name="name" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                    </svg>
                                    {{ contact.rightSide.form.phoneLabel }}
                                </div>
                                <input type="tel" name="phone" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                        </div>
                        
                        <!-- Email and Address Row -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                    </svg>
                                    {{ contact.rightSide.form.emailLabel }}
                                </div>
                                <input type="email" name="email" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                    </svg>
                                    {{ contact.rightSide.form.addressLabel }}
                                </div>
                                <input type="text" name="address" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                        </div>
                        
                        <!-- Divider -->
                        <hr class="border-slate-600">
                        
                        <!-- Parameters Section -->
                        <div>
                            <h3 class="text-white font-semibold mb-4">{{ contact.rightSide.form.parametersHeading }}</h3>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.gateTypeLabel }}</label>
                                    <input type="text" name="gate-type" placeholder="{{ contact.rightSide.form.gateTypeDefault }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.dimensionsLabel }}</label>
                                    <input type="text" name="dimensions" placeholder="{{ contact.rightSide.form.dimensionsPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Notes -->
                        <div>
                            <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.notesLabel }}</label>
                            <textarea name="notes" rows="4" placeholder="{{ contact.rightSide.form.notesPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange resize-none"></textarea>
                        </div>
                        
                        <!-- GDPR Checkbox -->
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <input type="checkbox" id="gdpr" name="gdpr" required class="mt-1 w-4 h-4 text-brand-orange bg-slate-700 border-slate-600 rounded focus:ring-brand-orange focus:ring-2">
                                <label for="gdpr" class="text-white text-sm">{{ contact.rightSide.form.gdprText | safe }}</label>
                            </div>
                            <button type="submit" class="w-fit bg-white text-slate-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-300">
                            {{ contact.rightSide.form.submitButton }}
                            </button>
                        </div>
                    </form>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- TESTIMONIALS SECTION -->
    <section class="py-24 ~px-4/8 bg-white border-b border-gray-200">
        <div class="container m-auto text-center">
            <!-- HEADING -->
            <div class="mb-16">
                <p class="inline-block px-4 py-2 bg-orange-100 text-brand-orange rounded-full text-sm font-medium mb-4">{{ testimonials.topper }}</p>
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
                    {{ testimonials.heading }}
                </h2>
                <p class="text-lg text-gray-600 max-w-4xl mx-auto">
                    {{ testimonials.subtitle }}
                </p>
            </div>

            <!-- TESTIMONIALS GRID -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
                {% for testimonial in testimonials.items %}
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-200 text-left relative">
                    <!-- Star icon -->
                    <div class="absolute -top-4 left-8">
                        <div class="w-8 h-8 bg-brand-orange rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        </div>
                    </div>
                    
                    <!-- Quote -->
                    <blockquote class="text-gray-700 text-lg leading-relaxed mb-6 pt-4">
                        "{{ testimonial.quote }}"
                    </blockquote>
                    
                    <!-- Author -->
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
                            <span class="text-gray-600 font-semibold text-sm">{{ testimonial.initials }}</span>
                        </div>
                        <div>
                            <div class="font-semibold text-gray-900">{{ testimonial.name }}</div>
                            <div class="text-gray-500 text-sm">{{ testimonial.title }}</div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock body %}