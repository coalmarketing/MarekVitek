{% extends "layouts/base.njk" %}

{% block head %}
    <!-- To ensure proper validation, prevent errors, and encourage developers to check, schema's are an opt-in feature. They're very bespoke and requires some customising  -->
    <!-- Uncomment the code below to enable Structured Data, and test it when you deploy to Netlify - https://developers.google.com/search/docs/appearance/structured-data -->
    {% include "components/home-schema.njk" %}
{% endblock %}

{% block body %}
    <!-- HERO SECTION -->
    <section class="relative py-24 ~px-4/8 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden min-h-[700px] flex items-center">
        <!-- Animated Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-10 left-10 w-2 h-2 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute top-32 right-16 w-1 h-1 bg-brand-blue rounded-full animate-ping"></div>
            <div class="absolute bottom-20 left-1/4 w-3 h-3 bg-white rounded-full animate-bounce"></div>
            <div class="absolute bottom-40 right-20 w-1 h-1 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute top-1/2 right-1/3 w-2 h-2 bg-brand-blue rounded-full animate-ping"></div>
        </div>
        
        <!-- Gradient Overlays -->
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/90 to-transparent z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-transparent to-gray-900/40 z-10"></div>
        
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-brand-orange/10 to-transparent rounded-full blur-3xl -translate-y-32 translate-x-32"></div>
        <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-brand-blue/10 to-transparent rounded-full blur-3xl translate-y-32 -translate-x-32"></div>
        
        <div class="container m-auto relative z-30">
            <div class="grid lg:grid-cols-12 gap-12 items-center">
                <!-- Left Content -->
                <div class="lg:col-span-7">
                    <!-- Enhanced Topper -->
                    <div class="mb-8">
                        <div class="inline-flex items-center bg-gradient-to-r from-brand-orange/20 to-brand-blue/20 backdrop-blur-sm border border-white/20 px-6 py-3 rounded-xl">
                            <div class="w-2 h-2 bg-brand-orange rounded-full animate-pulse mr-3"></div>
                            <span class="text-white font-semibold text-sm uppercase tracking-wider">{{ hero.topper }}</span>
                        </div>
                    </div>

                    <!-- Enhanced Main heading -->
                    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
                        {{ hero.heading | safe }}
                    </h1>
                    
                    <!-- Enhanced Description -->
                    <p class="text-xl text-gray-300 mb-10 leading-relaxed max-w-2xl">
                        {{ hero.paragraph1 }}
                    </p>
                    
                    <!-- Enhanced CTA Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 mb-12">
                        <a href="/kontakt/" class="group inline-flex items-center justify-center bg-gradient-to-r from-brand-orange to-orange-400 text-white px-8 py-4 rounded-xl font-bold text-lg hover:shadow-2xl hover:shadow-orange-500/25 transition-all duration-300 transform hover:-translate-y-1">
                            <span>{{ hero.btnCta1 }}</span>
                            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                        </a>
                        <a href="/produkty/" class="group inline-flex items-center justify-center bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-white/20 transition-all duration-300">
                            <span>{{ hero.btnCta2 }}</span>
                            <svg class="w-5 h-5 ml-2 group-hover:translate-y-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                            </svg>
                        </a>
                    </div>
                    
                    <!-- Trust Indicator -->
                    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
                        <img src="/assets/images/hero/Hormann-container.png" alt="Hormann container" class="h-12 w-auto">
                        <p class="text-base text-gray-300 leading-relaxed">{{ hero.sectionFooter | safe }}</p>
                    </div>
                </div>
                
                <!-- Right Side - Compact Product List -->
                <div class="lg:col-span-4 relative">
                    <!-- Main Visual Container -->
                    <div class="relative h-full min-h-[400px] lg:min-h-[450px]">
                        <!-- Enhanced Background Effects -->
                        <div class="absolute inset-0 bg-gradient-to-br from-brand-orange/15 via-brand-blue/15 to-transparent rounded-2xl blur-2xl"></div>
                        <div class="absolute top-1/4 left-1/4 w-48 h-48 bg-gradient-to-r from-purple-500/8 to-pink-500/8 rounded-full blur-2xl animate-pulse"></div>
                        <div class="absolute bottom-1/4 right-1/4 w-32 h-32 bg-gradient-to-l from-green-500/8 to-blue-500/8 rounded-full blur-xl animate-pulse delay-1000"></div>
                        
                        <!-- Floating Decorative Elements -->
                        <div class="absolute top-6 left-6 w-2 h-2 bg-brand-orange/40 rounded-full animate-bounce"></div>
                        <div class="absolute top-16 right-8 w-1 h-1 bg-brand-blue/50 rounded-full animate-ping"></div>
                        <div class="absolute bottom-12 left-12 w-2 h-2 bg-white/20 rounded-full animate-pulse"></div>
                        
                        <!-- Compact Product List -->
                        <div class="relative h-full flex flex-col justify-center">
                            <!-- Header -->
                            <div class="mb-6 text-center">
                                <div class="inline-flex items-center bg-white/10 backdrop-blur-sm border border-white/20 px-3 py-1.5 rounded-lg mb-3">
                                    <span class="text-white font-medium text-xs">Naše produkty</span>
                                </div>
                                <h3 class="text-lg font-bold text-white">Co nabízíme</h3>
                            </div>
                            
                            <!-- Product Cards Grid -->
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-3">
                                <!-- Garážová vrata -->
                                <a href="/produkty/garazova-vrata/" class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-3 hover:bg-white/15 transition-all duration-300 relative overflow-hidden">
                                    <div class="absolute inset-0 bg-gradient-to-br from-brand-orange/20 to-transparent rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    <div class="relative z-10 flex items-center gap-3">
                                        <div class="w-8 h-8 bg-brand-orange rounded-md flex items-center justify-center">
                                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                            </svg>
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-white font-medium text-sm">Garážová vrata</h4>
                                            <p class="text-gray-300 text-xs">Sekční a výklopná vrata</p>
                                        </div>
                                        <svg class="w-4 h-4 text-white/60 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                </a>
                                
                                <!-- Vjezdové brány -->
                                <a href="/produkty/brany/" class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-3 hover:bg-white/15 transition-all duration-300 relative overflow-hidden">
                                    <div class="absolute inset-0 bg-gradient-to-br from-brand-blue/20 to-transparent rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    <div class="relative z-10 flex items-center gap-3">
                                        <div class="w-8 h-8 bg-brand-blue rounded-md flex items-center justify-center">
                                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0v4M5 11h14l-.5 7A2 2 0 0116.5 20h-9A2 2 0 015.5 18L5 11z"/>
                                            </svg>
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-white font-medium text-sm">Vjezdové brány</h4>
                                            <p class="text-gray-300 text-xs">Posuvné a křídlové brány</p>
                                        </div>
                                        <svg class="w-4 h-4 text-white/60 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                </a>
                                
                                <!-- Žaluzie -->
                                <a href="/produkty/zaluzie/" class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-3 hover:bg-white/15 transition-all duration-300 relative overflow-hidden">
                                    <div class="absolute inset-0 bg-gradient-to-br from-green-500/20 to-transparent rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    <div class="relative z-10 flex items-center gap-3">
                                        <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
                                            </svg>
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-white font-medium text-sm">Žaluzie</h4>
                                            <p class="text-gray-300 text-xs">Venkovní a vnitřní žaluzie</p>
                                        </div>
                                        <svg class="w-4 h-4 text-white/60 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                </a>
                                
                                <!-- Rolety -->
                                <a href="/produkty/rolety/" class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-3 hover:bg-white/15 transition-all duration-300 relative overflow-hidden">
                                    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/20 to-transparent rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    <div class="relative z-10 flex items-center gap-3">
                                        <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-white font-medium text-sm">Rolety</h4>
                                            <p class="text-gray-300 text-xs">Okenní a bezpečnostní rolety</p>
                                        </div>
                                        <svg class="w-4 h-4 text-white/60 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                </a>
                            </div>
                            
                            <!-- View All Products CTA -->
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FEATURES SECTION -->
    <section class="py-24 ~px-4/8 bg-white border-t border-gray-200">
        <div class="container m-auto text-center">
            <!-- HEADING -->
            <div class="mb-16">
                <p class="inline-block px-4 py-2 bg-orange-100 text-brand-orange rounded-full text-sm font-medium mb-4">{{ features.topper }}</p>
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
                    {{ features.heading | safe }}
                </h2>
                <p class="text-lg text-gray-600 max-w-4xl mx-auto">
                    {{ features.paragraph }}
                </p>
            </div>

            <!-- FEATURES GRID -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
                {% for item in features.items %}
                <div class="text-center">
                    <div class="w-20 h-20 bg-brand-blue rounded-full flex items-center justify-center mx-auto mb-6">
                        {% if item.icon == "20" %}
                            <span class="text-brand-orange text-2xl font-bold">20</span>
                        {% elif item.icon == "user" %}
                            <svg class="w-10 h-10 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        {% elif item.icon == "quality" %}
                            <svg class="w-10 h-10 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        {% endif %}
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{ item.heading }}</h3>
                    <p class="text-gray-600">
                        {{ item.text | safe }}
                    </p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- PRODUCTS SECTION -->
    <section class="relative py-24 ~px-4/8 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
        <!-- Animated Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-16 left-16 w-2 h-2 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute top-40 right-20 w-1 h-1 bg-brand-blue rounded-full animate-ping"></div>
            <div class="absolute bottom-32 left-1/4 w-3 h-3 bg-white rounded-full animate-bounce"></div>
            <div class="absolute bottom-16 right-24 w-1 h-1 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute top-1/2 right-1/3 w-2 h-2 bg-brand-blue rounded-full animate-ping"></div>
        </div>
        
        <!-- Gradient Overlays -->
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/90 to-transparent z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-transparent to-gray-900/40 z-10"></div>
        
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-brand-orange/10 to-transparent rounded-full blur-3xl -translate-y-32 translate-x-32"></div>
        <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-brand-blue/10 to-transparent rounded-full blur-3xl translate-y-32 -translate-x-32"></div>
        
        <div class="container m-auto relative z-30">
            <!-- Enhanced Header -->
            <div class="text-center mb-12 sm:mb-16">
                <div class="mb-6 sm:mb-8">
                    <div class="inline-flex items-center bg-gradient-to-r from-brand-orange/20 to-brand-blue/20 backdrop-blur-sm border border-white/20 px-4 py-2 sm:px-6 sm:py-3 rounded-xl">
                        <div class="w-2 h-2 bg-brand-orange rounded-full animate-pulse mr-2 sm:mr-3"></div>
                        <span class="text-white font-semibold text-xs sm:text-sm uppercase tracking-wider">{{ products.topper }}</span>
                    </div>
                </div>
                
                <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6 leading-tight">
                    {{ products.heading }}
                </h2>
                <p class="text-lg sm:text-xl text-gray-300 leading-relaxed max-w-4xl mx-auto px-4">
                    {{ products.paragraph }}
                </p>
            </div>

            <!-- Enhanced Products Layout -->
            <div class="relative">
                <!-- Enhanced Background Effects -->
                <div class="absolute inset-0 bg-gradient-to-br from-brand-orange/10 via-brand-blue/10 to-transparent rounded-3xl blur-3xl"></div>
                <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-gradient-to-r from-purple-500/5 to-pink-500/5 rounded-full blur-3xl animate-pulse"></div>
                <div class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-gradient-to-l from-green-500/5 to-blue-500/5 rounded-full blur-2xl animate-pulse delay-1000"></div>
                
                <!-- Products Grid -->
                <div class="relative grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 lg:gap-8 max-w-7xl mx-auto">
                    {% set productData = [
                        {
                            name: "Vjezdové brány",
                            description: "Automatické posuvné a křídlové brány s dálkovým ovládáním",
                            image: "/assets/images/products/brany-modern.jpg",
                            link: "/produkty/brany/",
                            color: "orange"
                        },
                        {
                            name: "Pergoly",
                            description: "Bioklimatické pergoly pro stínicí a ochranu terasy",
                            image: "/assets/images/products/pergoly-modern.jpg", 
                            link: "/produkty/pergoly/",
                            color: "blue"
                        },
                        {
                            name: "Markýzy",
                            description: "Venkovní markýzy a stínicí technika pro terasy",
                            image: "/assets/images/products/markyzy-modern.jpg",
                            link: "/produkty/markyzy/",
                            color: "green"
                        },
                        {
                            name: "Rolety",
                            description: "Okenní rolety pro tepelnou a zvukovou izolaci",
                            image: "/assets/images/products/rolety-modern.jpg",
                            link: "/produkty/rolety/",
                            color: "purple"
                        }
                    ] %}
                    
                    {% for product in productData %}
                    <!-- Product Card {{ loop.index }} -->
                    <div class="relative group {% if loop.index == 1 %}md:row-span-2{% endif %}">
                        <a href="{{ product.link }}" class="{% if loop.index == 1 %}flex flex-col{% else %}block{% endif %} relative overflow-hidden rounded-2xl md:rounded-3xl bg-white/10 backdrop-blur-sm border border-white/20 hover:bg-white/15 transition-all duration-500 hover:transform hover:scale-105 hover:shadow-2xl {% if product.color == 'orange' %}hover:shadow-orange-500/25{% elif product.color == 'blue' %}hover:shadow-blue-500/25{% elif product.color == 'green' %}hover:shadow-green-500/25{% else %}hover:shadow-purple-500/25{% endif %} h-full {% if loop.index == 1 %}min-h-[380px] sm:min-h-[420px] md:min-h-[500px] lg:min-h-[550px]{% else %}min-h-[320px] sm:min-h-[360px] md:min-h-[400px] lg:min-h-[420px]{% endif %}">
                            
                            {% if loop.index == 1 %}
                            <!-- Hover arrow for large card -->
                            <div class="absolute top-3 right-3 sm:top-4 sm:right-4 w-8 h-8 sm:w-10 sm:h-10 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:transform group-hover:scale-110 z-20">
                                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                </svg>
                            </div>
                            
                            <!-- Image placeholder for large card -->
                            <div class="flex-[2] relative bg-gradient-to-br from-gray-700 to-gray-800 flex items-center justify-center min-h-[280px] sm:min-h-[320px] md:min-h-[360px] lg:min-h-[400px]">
                                <!-- Placeholder content -->
                                <div class="text-center text-gray-400">
                                    <svg class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    <p class="text-sm opacity-60">Image placeholder</p>
                                </div>
                                
                                <!-- Subtle overlay for text readability -->
                                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/60 via-transparent to-transparent"></div>
                            </div>
                            {% endif %}
                            
                            <!-- Image Container -->
                            {% if loop.index != 1 %}
                            <div class="relative h-40 sm:h-48 md:h-56 lg:h-64 overflow-hidden">
                                <!-- Placeholder gradient background -->
                                <div class="absolute inset-0 bg-gradient-to-br {% if product.color == 'orange' %}from-brand-orange/20 to-orange-600/30{% elif product.color == 'blue' %}from-brand-blue/20 to-blue-600/30{% elif product.color == 'green' %}from-green-500/20 to-green-600/30{% else %}from-purple-500/20 to-purple-600/30{% endif %}"></div>
                                
                                <!-- Image overlay for better text readability -->
                                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/40 to-gray-900/10"></div>
                                
                                <!-- Product icon/illustration -->
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div class="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 {% if product.color == 'orange' %}bg-brand-orange{% elif product.color == 'blue' %}bg-brand-blue{% elif product.color == 'green' %}bg-green-500{% else %}bg-purple-500{% endif %} rounded-xl md:rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                        {% if product.name == "Vjezdové brány" %}
                                            <svg class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                            </svg>
                                        {% elif product.name == "Pergoly" %}
                                            <svg class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 21l4-4m0 0V3m0 14l4 4m-8-6h16"/>
                                            </svg>
                                        {% elif product.name == "Markýzy" %}
                                            <svg class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
