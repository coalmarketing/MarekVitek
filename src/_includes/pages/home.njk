{% extends "layouts/base.njk" %}

{% block head %}
    <!-- Script for Netlify Identity -->
    <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <!-- Netlify Identity configuration -->
    <script defer src="/assets/js/identity.js"></script>

    <!-- To ensure proper validation, prevent errors, and encourage developers to check, schema's are an opt-in feature. They're very bespoke and requires some customising  -->
    <!-- Uncomment the code below to enable Structured Data, and test it when you deploy to Netlify - https://developers.google.com/search/docs/appearance/structured-data -->
    {% include "components/home-schema.njk" %}
{% endblock %}

{% block body %}
    <!-- SECTION -->
    <section class="min-h-screen flex items-center ~px-4/8 bg-[url('/assets/images/hero/hero-bg.jpg')] bg-cover bg-center">
        <div class="container m-auto">
            <div class="mb-4 w-fit border-gradient-custom-rounded">
                <div class="text-left p-4 flex flex-row content-center items-center bg-transparent">
                    <img src="/assets/svgs/topper-icon.svg" alt="Topper icon" class="w-6 h-6 mr-2">
                    <p class="text-lg font-medium text-white">{{ hero.topper }}</p>
                </div>
            </div>
            <div class="flex flex-col text-block p-2 lg:p-4">
                <h1 class="text-3xl lg:text-5xl font-bold text-white mb-6">{{ hero.heading | safe }}</h1>
                <p class="text-lg lg:text-xl text-white mb-8 max-w-3xl mx-auto lg:mx-0">{{ hero.paragraph1 }}</p>
            </div>
                <div class="flex flex-col gap-4 mb-8 w-fit">
                    <div class="flex flex-col lg:flex-row gap-4">
                        <a href="#" class="bg-brand-blue border-2 border-brand-blue text-white px-6 py-3 rounded-lg font-semibold text-center transition-all duration-300 hover:bg-transparent hover:border-2 hover:border-white">{{ hero.btnCta1 }}</a>
                        <a href="#" class="bg-brand-orange border-2 border-brand-orange text-white px-6 py-3 rounded-lg font-semibold text-center transition-all duration-300 hover:bg-transparent hover:border-2 hover:border-white">{{ hero.btnCta2 }}</a>
                    </div>
                    <div class="h-px bg-white my-2"></div>
                    <div class="flex flex-col lg:flex-row gap-4">
                        <img src="/assets/images/hero/Hormann-container.png" alt="Hormann container" class="h-53 w-auto mb-4 mx-auto lg:mx-0">
                        <p class="text-base text-white text-center lg:text-left">{{ hero.sectionFooter | safe }}</p>
                    </div>
                </div>
        </div>
    </section>

    <!-- FEATURES SECTION -->
    <section class="py-24 ~px-4/8 bg-white border-t border-gray-200">
        <div class="container m-auto text-center">
            <!-- HEADING -->
            <div class="mb-16">
                <p class="inline-block px-4 py-2 bg-orange-100 text-brand-orange rounded-full text-sm font-medium mb-4">{{ features.topper }}</p>
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
                    {{ features.heading | safe }}
                </h2>
                <p class="text-lg text-gray-600 max-w-4xl mx-auto">
                    {{ features.paragraph }}
                </p>
            </div>

            <!-- FEATURES GRID -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
                {% for item in features.items %}
                <div class="text-center">
                    <div class="w-20 h-20 bg-brand-blue rounded-full flex items-center justify-center mx-auto mb-6">
                        {% if item.icon == "20" %}
                            <span class="text-brand-orange text-2xl font-bold">20</span>
                        {% elif item.icon == "user" %}
                            <svg class="w-10 h-10 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        {% elif item.icon == "quality" %}
                            <svg class="w-10 h-10 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        {% endif %}
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{ item.heading }}</h3>
                    <p class="text-gray-600">
                        {{ item.text | safe }}
                    </p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- PRODUCTS SECTION -->
    <section class="py-24 ~px-4/8 border-y border-gray-200">
        <div class="container m-auto text-center">
            <!-- HEADING -->
            <div class="mb-16">
                <p class="inline-block px-4 py-2 bg-orange-100 text-brand-orange rounded-full text-sm font-medium mb-4">{{ products.topper }}</p>
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
                    {{ products.heading }}
                </h2>
                <p class="text-lg text-gray-600 max-w-4xl mx-auto">
                    {{ products.paragraph }}
                </p>
            </div>

            <!-- PRODUCTS GRID -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 text-left">
                {% for item in products.items %}
                <div class="bg-white rounded-xl p-6 shadow-sm border {% if item.highlighted %}border-brand-orange{% else %}border-gray-200{% endif %} hover:shadow-md transition-shadow duration-300">
                    <!-- Icon placeholder -->
                    <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-6">
                        <div class="w-8 h-8 bg-gray-300 rounded"></div>
                    </div>
                    
                    <!-- Content -->
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{ item.heading }}</h3>
                    <p class="text-gray-600 mb-6 text-sm leading-relaxed">
                        {{ item.text }}
                    </p>
                    
                    <!-- Button -->
                    <button class="w-full bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50 transition-colors duration-300 flex items-center justify-between">
                        {{ item.btnText }}
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </button>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CONTACT SECTION -->
    <section class="py-24 ~px-4/8 border-y ">
        <div class="container m-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
                
                <!-- LEFT SIDE - HOW TO GET QUOTE -->
                <div class="lg:col-span-1 space-y-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">{{ contact.leftSide.heading }}</h2>
                    
                    <!-- Steps -->
                    <div class="space-y-6">
                        {% for step in contact.leftSide.steps %}
                        <div class="flex gap-4 border-l-2 border-gray-800 items-center ">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                {% if step.icon == "search" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                {% elif step.icon == "form" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                {% elif step.icon == "email" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">{{ step.heading }}</h3>
                                <p class="text-gray-600 text-sm">{{ step.text }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <!-- Quick Contact Box -->
                    <div class="bg-white p-6 rounded-lg border-2 border-dashed border-gray-300 text-center">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h4 class="font-semibold text-gray-900 mb-2">{{ contact.leftSide.quickContact.heading }}</h4>
                        <p class="text-gray-600 text-sm mb-4">{{ contact.leftSide.quickContact.text }}</p>
                        <a href="tel:{{ contact.leftSide.quickContact.phone }}" class="inline-block bg-brand-orange border-2 border-brand-orange text-white px-6 py-2 rounded-lg font-semibold hover:bg-transparent hover:text-brand-orange transition-colors duration-300">
                            {{ contact.leftSide.quickContact.phone }}
                        </a>
                    </div>
                </div>
                
                <!-- RIGHT SIDE - CONTACT FORM -->
                <div class="lg:col-span-2 bg-brand-blue lg:rounded-3xl rounded-2xl lg:p-6 p-2">
                    <div class="bg-brand-blue border-2 rounded-xl border-brand-orange lg:p-6 p-4">
                        <h2 class="text-2xl font-bold text-white mb-2 text-center">{{ contact.rightSide.heading }}</h2>
                        <p class="text-gray-300 text-sm mb-8 text-center">{{ contact.rightSide.subtitle }}</p>
                        
                        <form class="space-y-6" action="/kontakt/success/" method="POST" netlify>
                        <!-- Personal Info Row -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                    </svg>
                                    {{ contact.rightSide.form.nameLabel }}
                                </div>
                                <input type="text" name="name" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                    </svg>
                                    {{ contact.rightSide.form.phoneLabel }}
                                </div>
                                <input type="tel" name="phone" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                        </div>
                        
                        <!-- Email and Address Row -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                    </svg>
                                    {{ contact.rightSide.form.emailLabel }}
                                </div>
                                <input type="email" name="email" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                            <div>
                                <div class="flex items-center text-white text-sm mb-2">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                    </svg>
                                    {{ contact.rightSide.form.addressLabel }}
                                </div>
                                <input type="text" name="address" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                            </div>
                        </div>
                        
                        <!-- Divider -->
                        <hr class="border-slate-600">
                        
                        <!-- Parameters Section -->
                        <div>
                            <h3 class="text-white font-semibold mb-4">{{ contact.rightSide.form.parametersHeading }}</h3>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.gateTypeLabel }}</label>
                                    <select name="gate-type" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                        <option>{{ contact.rightSide.form.gateTypeDefault }}</option>
                                        <option>Křídlová brána</option>
                                        <option>Garážová vrata - sekční</option>
                                        <option>Garážová vrata - rolovací</option>
                                        <option>Garážová vrata - výklopná</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.dimensionsLabel }}</label>
                                    <input type="text" name="dimensions" placeholder="{{ contact.rightSide.form.dimensionsPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Notes -->
                        <div>
                            <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.notesLabel }}</label>
                            <textarea name="notes" rows="4" placeholder="{{ contact.rightSide.form.notesPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange resize-none"></textarea>
                        </div>
                        
                        <!-- GDPR Checkbox -->
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <input type="checkbox" id="gdpr" name="gdpr" required class="mt-1 w-4 h-4 text-brand-orange bg-slate-700 border-slate-600 rounded focus:ring-brand-orange focus:ring-2">
                                <label for="gdpr" class="text-white text-sm">{{ contact.rightSide.form.gdprText | safe }}</label>
                            </div>
                            <button type="submit" class="w-fit bg-white text-slate-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-300">
                            {{ contact.rightSide.form.submitButton }}
                            </button>
                        </div>
                    </form>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- TESTIMONIALS SECTION -->
    <section class="py-24 ~px-4/8 bg-white border-b border-gray-200">
        <div class="container m-auto text-center">
            <!-- HEADING -->
            <div class="mb-16">
                <p class="inline-block px-4 py-2 bg-orange-100 text-brand-orange rounded-full text-sm font-medium mb-4">{{ testimonials.topper }}</p>
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
                    {{ testimonials.heading }}
                </h2>
                <p class="text-lg text-gray-600 max-w-4xl mx-auto">
                    {{ testimonials.subtitle }}
                </p>
            </div>

            <!-- TESTIMONIALS GRID -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
                {% for testimonial in testimonials.items %}
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-200 text-left relative">
                    <!-- Star icon -->
                    <div class="absolute -top-4 left-8">
                        <div class="w-8 h-8 bg-brand-orange rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        </div>
                    </div>
                    
                    <!-- Quote -->
                    <blockquote class="text-gray-700 text-lg leading-relaxed mb-6 pt-4">
                        "{{ testimonial.quote }}"
                    </blockquote>
                    
                    <!-- Author -->
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
                            <span class="text-gray-600 font-semibold text-sm">{{ testimonial.initials }}</span>
                        </div>
                        <div>
                            <div class="font-semibold text-gray-900">{{ testimonial.name }}</div>
                            <div class="text-gray-500 text-sm">{{ testimonial.title }}</div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {% include "sections/cta.njk" %}
{% endblock body %}