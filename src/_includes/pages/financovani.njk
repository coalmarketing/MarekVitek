{% extends "layouts/base.njk" %}

{% block body %}
    {% set heroData = {
        topper: hero.topper,
        heading: hero.heading,
        description: hero.paragraph,
        ctaPrimary: { text: hero.ctaPrimary, href: "#kontakt" },
        ctaSecondary: { text: hero.ctaSecondary, href: "tel:+420724311719" }
    } %}
    {% include "components/hero.njk" %}

    <!-- SPECIALIST SECTION -->
    <section class="py-16 ~px-4/8 bg-white">
        <div class="container m-auto">
            <div class="max-w-4xl m-auto text-center">
                <!-- Section header -->
                <div class="inline-block border-gradient-custom-rounded bg-white px-6 py-3 mb-6">
                    <span class="text-brand-blue font-semibold text-sm uppercase tracking-wider">{{ specialist.topper }}</span>
                </div>
                
                <div class="bg-gradient-to-br from-gray-50 to-white border-2 border-gray-200 rounded-2xl p-8 md:p-12 hover:shadow-xl transition-all duration-300">
                    <!-- Profile Section -->
                    <div class="w-32 h-32 bg-gradient-to-br from-brand-orange to-amber-400 rounded-full flex items-center justify-center m-auto mb-6">
                        <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                    
                    <h2 class="text-3xl font-bold text-gray-900 mb-2">{{ specialist.heading }}</h2>
                    <p class="text-lg text-brand-orange font-semibold mb-4">{{ specialist.subtitle }}</p>
                    
                    <div class="mb-6">
                        <a href="tel:{{ specialist.phone }}" class="inline-flex items-center gap-2 px-6 py-3 bg-brand-orange text-white rounded-lg hover:bg-opacity-90 transition-all duration-300 font-semibold no-underline">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                            </svg>
                            {{ specialist.phone }}
                        </a>
                    </div>
                    
                    <p class="text-gray-600 mb-6 leading-relaxed">{{ specialist.description }}</p>
                    
                    <!-- Details -->
                    <div class="text-sm text-gray-500 space-y-1">
                        <p>{{ specialist.details.ico }}</p>
                        <p>{{ specialist.details.address }}</p>
                        <p>{{ specialist.details.status }}</p>
                        <p>{{ specialist.details.since }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CONTACT SECTION -->
    <section id="kontakt" class="py-24 ~px-4/8 border-y bg-white">
        <div class="container m-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
                
                <!-- LEFT SIDE - HOW TO GET FINANCING -->
                <div class="lg:col-span-1 space-y-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">{{ contact.leftSide.heading }}</h2>
                    
                    <!-- Steps -->
                    <div class="space-y-6">
                        {% for step in contact.leftSide.steps %}
                        <div class="flex gap-4 border-l-2 border-gray-800 items-center">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                {% if step.icon == "search" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                {% elif step.icon == "form" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                                    </svg>
                                {% elif step.icon == "email" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">{{ step.heading }}</h3>
                                <p class="text-gray-600 text-sm">{{ step.text }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <!-- Quick Contact Box -->
                    <div class="bg-white p-6 rounded-lg border-2 border-dashed border-gray-300 text-center">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h4 class="font-semibold text-gray-900 mb-2">{{ contact.leftSide.quickContact.heading }}</h4>
                        <p class="text-gray-600 text-sm mb-4">{{ contact.leftSide.quickContact.text }}</p>
                        <a href="tel:{{ contact.leftSide.quickContact.phone }}" class="inline-block bg-brand-orange border-2 border-brand-orange text-white px-6 py-2 rounded-lg font-semibold hover:bg-transparent hover:text-brand-orange transition-colors duration-300">
                            {{ contact.leftSide.quickContact.phone }}
                        </a>
                    </div>
                </div>
                
                <!-- RIGHT SIDE - CONTACT FORM -->
                <div class="lg:col-span-2 bg-brand-blue lg:rounded-3xl rounded-2xl lg:p-6 p-2">
                    <div class="bg-brand-blue border-2 rounded-xl border-brand-orange lg:p-6 p-4">
                        <h2 class="text-2xl font-bold text-white mb-2 text-center">{{ contact.rightSide.heading }}</h2>
                        <p class="text-gray-300 text-sm mb-8 text-center">{{ contact.rightSide.subtitle }}</p>
                        
                        <form class="space-y-6" action="/kontakt/success/" method="POST" data-netlify="true" netlify>
                            <input type="hidden" name="form-name" value="financovani-contact">
                            <input type="hidden" name="subject" value="Poptávka financování - {{ title }}">
                            
                            <!-- Personal Info Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                        </svg>
                                        {{ contact.rightSide.form.nameLabel }}
                                    </div>
                                    <input type="text" name="name" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                        </svg>
                                        {{ contact.rightSide.form.phoneLabel }}
                                    </div>
                                    <input type="tel" name="phone" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                            
                            <!-- Email and Address Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                        </svg>
                                        {{ contact.rightSide.form.emailLabel }}
                                    </div>
                                    <input type="email" name="email" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                        </svg>
                                        {{ contact.rightSide.form.addressLabel }}
                                    </div>
                                    <input type="text" name="address" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                            
                            <!-- Divider -->
                            <hr class="border-slate-600">
                            
                            <!-- Parameters Section -->
                            <div>
                                <h3 class="text-white font-semibold mb-4">{{ contact.rightSide.form.parametersHeading }}</h3>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.productTypeLabel }}</label>
                                        <input type="text" name="product-type" placeholder="{{ contact.rightSide.form.productTypeDefault }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                    </div>
                                    <div>
                                        <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.amountLabel }}</label>
                                        <input type="text" name="amount" placeholder="{{ contact.rightSide.form.amountPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Notes -->
                            <div>
                                <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.notesLabel }}</label>
                                <textarea name="notes" rows="4" placeholder="{{ contact.rightSide.form.notesPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange resize-none"></textarea>
                            </div>
                            
                            <!-- GDPR Checkbox -->
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <input type="checkbox" id="gdpr" name="gdpr" required class="mt-1 w-4 h-4 text-brand-orange bg-slate-700 border-slate-600 rounded focus:ring-brand-orange focus:ring-2">
                                    <label for="gdpr" class="text-white text-sm">{{ contact.rightSide.form.gdprText | safe }}</label>
                                </div>
                                <button type="submit" class="w-fit bg-white text-slate-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-300">
                                    {{ contact.rightSide.form.submitButton }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </section>
{% endblock body %}
