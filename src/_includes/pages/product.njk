{% extends "layouts/base.njk" %}

{% block body %}
    <!-- MODERN PRODUCTS SECTION -->
    <section class="relative py-24 ~px-4/8 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden min-h-screen">
        <!-- Animated Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-16 left-16 w-2 h-2 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute top-40 right-20 w-1 h-1 bg-brand-blue rounded-full animate-ping"></div>
            <div class="absolute bottom-32 left-1/4 w-3 h-3 bg-white rounded-full animate-bounce"></div>
            <div class="absolute bottom-16 right-24 w-1 h-1 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute top-1/2 right-1/3 w-2 h-2 bg-brand-blue rounded-full animate-ping"></div>
        </div>
        
        <!-- Gradient Overlays -->
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/90 to-transparent z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-transparent to-gray-900/40 z-10"></div>
        
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-brand-orange/10 to-transparent rounded-full blur-3xl -translate-y-32 translate-x-32"></div>
        <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-brand-blue/10 to-transparent rounded-full blur-3xl translate-y-32 -translate-x-32"></div>
        
        <div class="container m-auto relative z-30">
            <!-- Enhanced Header -->
            <div class="text-center mb-12 sm:mb-16">
                <div class="mb-6 sm:mb-8">
                    <div class="inline-flex items-center bg-gradient-to-r from-brand-orange/20 to-brand-blue/20 backdrop-blur-sm border border-white/20 px-4 py-2 sm:px-6 sm:py-3 rounded-xl">
                        <div class="w-2 h-2 bg-brand-orange rounded-full animate-pulse mr-2 sm:mr-3"></div>
                        <span class="text-white font-semibold text-xs sm:text-sm uppercase tracking-wider">Náš sortiment</span>
                    </div>
                </div>
                
                <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6 leading-tight">
                    Naše produkty
                </h1>
                <p class="text-lg sm:text-xl text-gray-300 leading-relaxed max-w-4xl mx-auto px-4">
                    Kompletní sortiment kvalitních produktů pro váš domov a firmu
                </p>
            </div>

            <!-- Enhanced Products Layout -->
            <div class="relative">
                <!-- Enhanced Background Effects -->
                <div class="absolute inset-0 bg-gradient-to-br from-brand-orange/10 via-brand-blue/10 to-transparent rounded-3xl blur-3xl"></div>
                <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-gradient-to-r from-purple-500/5 to-pink-500/5 rounded-full blur-3xl animate-pulse"></div>
                <div class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-gradient-to-l from-green-500/5 to-blue-500/5 rounded-full blur-2xl animate-pulse delay-1000"></div>
                
                <!-- Products Grid -->
                <div class="relative grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6 lg:gap-8 max-w-7xl mx-auto">
                    {% set productData = [
                        {
                            name: "Garážová vrata",
                            description: "Sekční a výklopná vrata s automatickým ovládáním",
                            link: "/produkty/garazova-vrata/",
                            color: "orange",
                            icon: "garage"
                        },
                        {
                            name: "Vjezdové brány",
                            description: "Posuvné a křídlové brány s dálkovým ovládáním",
                            link: "/produkty/brany/",
                            color: "blue",
                            icon: "gate"
                        },
                        {
                            name: "Žaluzie",
                            description: "Venkovní a vnitřní žaluzie pro stínicí a ochranu",
                            link: "/produkty/zaluzie/",
                            color: "green",
                            icon: "blinds"
                        },
                        {
                            name: "Rolety",
                            description: "Okenní a bezpečnostní rolety pro tepelnou izolaci",
                            link: "/produkty/rolety/",
                            color: "purple",
                            icon: "roller"
                        },
                        {
                            name: "Markýzy",
                            description: "Venkovní markýzy a stínicí technika pro terasy",
                            link: "/produkty/markyzy/",
                            color: "indigo",
                            icon: "awning"
                        },
                        {
                            name: "Pergoly",
                            description: "Bioklimatické pergoly pro ochranu a komfort",
                            link: "/produkty/pergoly/",
                            color: "teal",
                            icon: "pergola"
                        },
                        {
                            name: "Sítě proti hmyzu",
                            description: "Kvalitní ochrana proti hmyzu do oken a dveří",
                            link: "/produkty/site-proti-hmyzu/",
                            color: "pink",
                            icon: "screen"
                        }
                    ] %}
                    
                    {% for product in productData %}
                    <!-- Product Card {{ loop.index }} -->
                    <div class="relative group">
                        <a href="{{ product.link }}" class="block relative overflow-hidden rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20 hover:bg-white/15 transition-all duration-500 hover:transform hover:scale-105 hover:shadow-2xl {% if product.color == 'orange' %}hover:shadow-orange-500/25{% elif product.color == 'blue' %}hover:shadow-blue-500/25{% elif product.color == 'green' %}hover:shadow-green-500/25{% elif product.color == 'purple' %}hover:shadow-purple-500/25{% elif product.color == 'indigo' %}hover:shadow-indigo-500/25{% elif product.color == 'teal' %}hover:shadow-teal-500/25{% else %}hover:shadow-pink-500/25{% endif %} h-full min-h-[280px] sm:min-h-[320px]">
                            
                            <!-- Image Container -->
                            <div class="relative h-40 sm:h-48 md:h-48 lg:h-40 overflow-hidden">
                                <!-- Product images -->
                                {% if product.icon == "garage" %}
                                <img src="/assets/images/presentation/Garážová vrata 08.jpg" 
                                     alt="Garážová vrata - sekční a výklopná vrata s automatickým ovládáním" 
                                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                     loading="lazy">
                                {% elif product.icon == "gate" %}
                                <img src="/assets/images/presentation/Brány 01.jpg" 
                                     alt="Vjezdové brány - posuvné a křídlové brány s dálkovým ovládáním" 
                                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                     loading="lazy">
                                {% elif product.icon == "roller" %}
                                <img src="/assets/images/presentation/Nadokenní rolety.jpg" 
                                     alt="Rolety - okenní a bezpečnostní rolety pro tepelnou izolaci" 
                                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                     loading="lazy">
                                {% elif product.icon == "awning" %}
                                <img src="/assets/images/presentation/Markýza Alanis.jpg" 
                                     alt="Markýzy - venkovní markýzy a stínicí technika pro terasy" 
                                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                     loading="lazy">
                                {% elif product.icon == "pergola" %}
                                <img src="/assets/images/presentation/Pergola 01.jpg" 
                                     alt="Pergoly - bioklimatické pergoly pro ochranu a komfort" 
                                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                     loading="lazy">
                                {% else %}
                                <!-- Fallback gradient background for products without images -->
                                <div class="absolute inset-0 bg-gradient-to-br {% if product.color == 'orange' %}from-brand-orange/20 to-orange-600/30{% elif product.color == 'blue' %}from-brand-blue/20 to-blue-600/30{% elif product.color == 'green' %}from-green-500/20 to-green-600/30{% elif product.color == 'purple' %}from-purple-500/20 to-purple-600/30{% elif product.color == 'indigo' %}from-indigo-500/20 to-indigo-600/30{% elif product.color == 'teal' %}from-teal-500/20 to-teal-600/30{% else %}from-pink-500/20 to-pink-600/30{% endif %}"></div>
                                
                                <!-- Product icon/illustration for fallback -->
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div class="w-12 h-12 sm:w-16 sm:h-16 {% if product.color == 'orange' %}bg-brand-orange{% elif product.color == 'blue' %}bg-brand-blue{% elif product.color == 'green' %}bg-green-500{% elif product.color == 'purple' %}bg-purple-500{% elif product.color == 'indigo' %}bg-indigo-500{% elif product.color == 'teal' %}bg-teal-500{% else %}bg-pink-500{% endif %} rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                        <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                                        </svg>
                                    </div>
                                </div>
                                {% endif %}
                                
                                <!-- Image overlay for better text readability -->
                                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/40 to-gray-900/10"></div>
                                
                                <!-- Hover arrow -->
                                <div class="absolute top-3 right-3 w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:transform group-hover:scale-110">
                                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </div>
                            </div>
                            
                            <!-- Content -->
                            <div class="p-4 sm:p-5 flex flex-col justify-between flex-1 relative z-10 bg-gradient-to-t from-gray-900/70 via-gray-900/30 to-transparent backdrop-blur-sm">
                                <div>
                                    <h3 class="text-lg sm:text-xl font-bold text-white mb-2 drop-shadow-2xl group-hover:{% if product.color == 'orange' %}text-brand-orange{% elif product.color == 'blue' %}text-brand-blue{% elif product.color == 'green' %}text-green-400{% elif product.color == 'purple' %}text-purple-400{% elif product.color == 'indigo' %}text-indigo-400{% elif product.color == 'teal' %}text-teal-400{% else %}text-pink-400{% endif %} transition-colors duration-300 leading-tight" style="text-shadow: 0 2px 12px rgba(0,0,0,0.9), 0 1px 4px rgba(0,0,0,0.8);">
                                        {{ product.name }}
                                    </h3>
                                    <p class="text-gray-100 text-sm leading-relaxed mb-4 opacity-95" style="text-shadow: 0 1px 8px rgba(0,0,0,0.8);">
                                        {{ product.description }}
                                    </p>
                                </div>
                                
                                <!-- CTA -->
                                <div class="flex items-center text-white/80 text-sm font-medium group-hover:text-white transition-colors duration-300 mt-auto">
                                    <span>Zobrazit produkt</span>
                                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </div>
                            </div>
                            
                            <!-- Card glow on hover -->
                            <div class="absolute inset-0 bg-gradient-to-br {% if product.color == 'orange' %}from-brand-orange/10{% elif product.color == 'blue' %}from-brand-blue/10{% elif product.color == 'green' %}from-green-500/10{% elif product.color == 'purple' %}from-purple-500/10{% elif product.color == 'indigo' %}from-indigo-500/10{% elif product.color == 'teal' %}from-teal-500/10{% else %}from-pink-500/10{% endif %} to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        </a>
                    </div>
                    {% endfor %}
                </div>
                
                <!-- Bottom CTA -->
                <div class="text-center mt-12 sm:mt-16">
                    <div class="inline-flex flex-col sm:flex-row gap-4">
                        <a href="/kontakt/" class="group inline-flex items-center justify-center bg-gradient-to-r from-brand-orange to-orange-400 text-white px-8 py-4 rounded-xl font-bold text-lg hover:shadow-2xl hover:shadow-orange-500/25 transition-all duration-300 transform hover:-translate-y-1">
                            <span>Nezávazná konzultace</span>
                            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}
