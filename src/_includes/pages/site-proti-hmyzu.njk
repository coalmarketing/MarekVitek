{% extends "layouts/base.njk" %}

{% block body %}
    <!-- HERO SECTION - Dark with insect screens background -->
    <section class="relative py-20 ~px-4/8 bg-gray-900 overflow-hidden min-h-[600px] flex items-center">
        <!-- Background Image Overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-60 z-10"></div>
        
        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/80 to-transparent z-20"></div>
        
        <div class="container m-auto relative z-30">
            <div class="max-w-2xl">
                <!-- Topper with gradient border -->
                {% if hero.topper %}
                <div class="mb-6">
                    <div class="inline-block border-gradient-custom-rounded bg-white px-6 py-3">
                        <span class="text-white font-semibold text-sm uppercase tracking-wider">{{ hero.topper }}</span>
                    </div>
                </div>
                {% endif %}

                <!-- Main heading -->
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
                    SÍTĚ PROTI HMYZU
                </h1>
                
                <!-- Description -->
                <p class="text-lg text-gray-300 mb-8 leading-relaxed">
                    Sítě proti hmyzu do oken a dveří
                </p>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="/kontakt/" class="inline-block px-8 py-4 bg-brand-orange text-white rounded-lg hover:bg-opacity-90 transition-all duration-300 font-semibold no-underline text-center">
                        Nezávazná poptávka
                    </a>
                    <a href="#produkty" class="inline-block px-8 py-4 border-2 border-white text-white rounded-lg hover:bg-white hover:text-gray-900 transition-all duration-300 font-semibold no-underline text-center">
                        Zobrazit produkty
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- INSECT SCREEN BENEFITS SECTION -->
    <section class="py-16 ~px-4/8 bg-white">
        <div class="container m-auto">
            <!-- Section header -->
            <div class="text-center mb-12">
                <div class="inline-block border-gradient-custom-rounded bg-white px-6 py-3 mb-6">
                    <span class="text-brand-blue font-semibold text-sm uppercase tracking-wider">Proč zvolit naše sítě proti hmyzu</span>
                </div>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                    Garážová Vrata a Brány Hörmann - Ústí nad Orlicí, Letohrad a okolí
                </h2>
            </div>

            <!-- Benefits grid -->
            <div class="grid md:grid-cols-3 gap-8 max-w-6xl m-auto">
                <div class="text-center p-8 rounded-2xl bg-gradient-to-br from-gray-50 to-white border-2 border-gray-200 hover:shadow-xl hover:border-brand-orange transition-all duration-300 group">
                    <!-- Icon -->
                    <div class="w-20 h-20 bg-gradient-to-br from-brand-orange to-amber-400 rounded-full flex items-center justify-center m-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <!-- Classic Screens Icon -->
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18"/>
                        </svg>
                    </div>
                    
                    <h3 class="text-2xl font-bold text-gray-900 mb-4 uppercase tracking-wide">KLASICKÉ SÍTĚ</h3>
                    <p class="text-gray-600 leading-relaxed">Nabízíme sítě proti hmyzu do klasických oken. Jsou vhodná také pro výrazně zaoblená a šikmá okna.</p>
                </div>

                <div class="text-center p-8 rounded-2xl bg-gradient-to-br from-gray-50 to-white border-2 border-gray-200 hover:shadow-xl hover:border-brand-orange transition-all duration-300 group">
                    <!-- Icon -->
                    <div class="w-20 h-20 bg-gradient-to-br from-brand-orange to-amber-400 rounded-full flex items-center justify-center m-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <!-- Pollen Protection Icon -->
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364-.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                        </svg>
                    </div>
                    
                    <h3 class="text-2xl font-bold text-gray-900 mb-4 uppercase tracking-wide">SÍTĚ PROTI PYLU</h3>
                    <p class="text-gray-600 leading-relaxed">Vždy si můžete vybrat, jestli chcete klasickou síť proti hmyzu nebo jemnější – protipylovou.</p>
                </div>

                <div class="text-center p-8 rounded-2xl bg-gradient-to-br from-gray-50 to-white border-2 border-gray-200 hover:shadow-xl hover:border-brand-orange transition-all duration-300 group">
                    <!-- Icon -->
                    <div class="w-20 h-20 bg-gradient-to-br from-brand-orange to-amber-400 rounded-full flex items-center justify-center m-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <!-- Colors and Imitations Icon -->
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2zM17 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4z"/>
                        </svg>
                    </div>
                    
                    <h3 class="text-2xl font-bold text-gray-900 mb-4 uppercase tracking-wide">BARVY A IMITACE</h3>
                    <p class="text-gray-600 leading-relaxed">Samozřejmostí je široká nabídka barev a imitací dřeva.<br><br>Věděli jste, že samotné sítě se dělají v šedé a černé barvě?</p>
                </div>
            </div>
        </div>
    </section>

    <!-- INSTALLATION HIGHLIGHT SECTION -->
    <section class="py-16 ~px-4/8 bg-gradient-to-br from-brand-orange to-amber-400">
        <div class="container m-auto">
            <div class="text-center max-w-4xl m-auto">
                <div class="w-24 h-24 bg-white bg-opacity-20 rounded-full flex items-center justify-center m-auto mb-8">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </div>
                <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 uppercase tracking-wider">
                    JEDNODUCHÁ MONTÁŽ I DEMONTÁŽ
                </h2>
                <p class="text-xl text-white text-opacity-90 leading-relaxed">
                    Naše sítě proti hmyzu jsou navrženy pro snadnou instalaci i sezónní demontáž. 
                    Kvalitní materiály a precizní zpracování zajišťují dlouhou životnost a spolehlivost.
                </p>
            </div>
        </div>
    </section>

    <!-- 3 STEPS SECTION -->
    <section class="py-16 lg:py-20 ~px-4/8 bg-white" data-motion-observe>
        <div class="container m-auto">
            <!-- Section header -->
            <div class="text-center mb-12 lg:mb-16">
                <div class="inline-block border-gradient-custom-rounded bg-white px-8 py-4 mb-8">
                    <span class="text-brand-blue font-bold text-lg uppercase tracking-wider">3 KROKY K NEZÁVISLÉ CENOVÉ NABÍDCE</span>
                </div>
                <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-4">
                    Jednoduše k vaší nové síti proti hmyzu
                </h2>
                <p class="text-lg lg:text-xl text-gray-600 max-w-2xl m-auto">
                    Jednoduchý proces od prvního kontaktu po kompletní instalaci vašich nových sítí
                </p>
            </div>

            <!-- Steps grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 max-w-7xl m-auto">
                <!-- Step 1 - Contact -->
                <div class="relative p-6 lg:p-8 bg-white rounded-2xl border-2 border-gray-300 hover:shadow-lg transition-all duration-300 group">
                    <!-- Step number and icon -->
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
                        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center relative">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <!-- Step number -->
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center motion-step-1">
                                <span class="text-white text-xs font-bold">1</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8 text-center">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 uppercase tracking-wide">KONTAKTUJTE NÁS</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">Zavolejte nám nebo vyplňte formulář. Odpovíme na všechny vaše dotazy a poradíme s výběrem.</p>
                    </div>
                </div>

                <!-- Step 2 - Measurement -->
                <div class="relative p-6 lg:p-8 bg-white rounded-2xl border-2 border-brand-orange hover:shadow-lg transition-all duration-300 group">
                    <!-- Step number and icon -->
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
                        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center relative">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                            <!-- Step number -->
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-brand-orange rounded-full flex items-center justify-center motion-step-2">
                                <span class="text-white text-xs font-bold">2</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8 text-center">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 uppercase tracking-wide">ZAMĚŘÍME ZDARMA</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">Náš technik přijede na místo, provede přesné zaměření a poradí s technickým řešením.</p>
                    </div>
                </div>

                <!-- Step 3 - Delivery & Installation -->
                <div class="relative p-6 lg:p-8 bg-white rounded-2xl border-2 border-[#06D6A0] hover:shadow-lg transition-all duration-300 group">
                    <!-- Step number and icon -->
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
                        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center relative">
                            <img src="/assets/svgs/van.svg" alt="Delivery van" class="w-8 h-8 object-contain">
                            <!-- Step number -->
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-[#06D6A0] rounded-full flex items-center justify-center motion-step-3">
                                <span class="text-white text-xs font-bold">3</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8 text-center">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 uppercase tracking-wide">DODÁME A NAMONTUJEME</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">Zajistíme dopravu, odbornou montáž a zaškolení. Vše s maximální péčí a čistotou.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CONTACT SECTION -->
    <section class="py-24 ~px-4/8 border-y">
        <div class="container m-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
                
                <!-- LEFT SIDE - HOW TO GET QUOTE -->
                <div class="lg:col-span-1 space-y-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">Jak získat cenovou nabídku</h2>
                    
                    <!-- Steps -->
                    <div class="space-y-6">
                        <div class="flex gap-4 border-l-2 border-gray-800 items-center">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                </svg>
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">Vyberte si typ sítě</h3>
                                <p class="text-gray-600 text-sm">Prohlédněte si naší nabídku a vyberte si typ sítě, který nejlépe vyhovuje vašim potřebám.</p>
                            </div>
                        </div>

                        <div class="flex gap-4 border-l-2 border-gray-800 items-center">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">Vyplňte formulář</h3>
                                <p class="text-gray-600 text-sm">Zadejte své kontaktní údaje a parametry sítě. Čím více informací nám poskytnete, tím přesnější bude nabídka.</p>
                            </div>
                        </div>

                        <div class="flex gap-4 border-l-2 border-gray-800 items-center">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">Obdržíte nabídku</h3>
                                <p class="text-gray-600 text-sm">Do 24 hodin vám pošleme nezávaznou cenovou nabídku na míru včetně doporučení a technických specifikací.</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Quick Contact Box -->
                    <div class="bg-white p-6 rounded-lg border-2 border-dashed border-gray-300 text-center">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h4 class="font-semibold text-gray-900 mb-2">Rychlý kontakt</h4>
                        <p class="text-gray-600 text-sm mb-4">Máte dotazy? Zavolejte nám přímo!</p>
                        <a href="tel:+420724311719" class="inline-block bg-brand-orange border-2 border-brand-orange text-white px-6 py-2 rounded-lg font-semibold hover:bg-transparent hover:text-brand-orange transition-colors duration-300">
                            +420 724 311 719
                        </a>
                    </div>
                </div>
                
                <!-- RIGHT SIDE - CONTACT FORM -->
                <div class="lg:col-span-2 bg-brand-blue lg:rounded-3xl rounded-2xl lg:p-6 p-2">
                    <div class="bg-brand-blue border-2 rounded-xl border-brand-orange lg:p-6 p-4">
                        <h2 class="text-2xl font-bold text-white mb-2 text-center">Nezávazná poptávka sítí proti hmyzu</h2>
                        <p class="text-gray-300 text-sm mb-8 text-center">Vyplňte formulář a my vám připravíme cenovou nabídku na míru</p>
                        
                        <form class="space-y-6" action="/kontakt/success/" method="POST" data-netlify="true" netlify>
                            <input type="hidden" name="form-name" value="site-proti-hmyzu-contact">
                            <input type="hidden" name="subject" value="Poptávka sítí proti hmyzu">
                            
                            <!-- Personal Info Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                        </svg>
                                        Jméno a příjmení *
                                    </div>
                                    <input type="text" name="name" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                        </svg>
                                        Telefon
                                    </div>
                                    <input type="tel" name="phone" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                            
                            <!-- Email and Address Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                        </svg>
                                        E-mail *
                                    </div>
                                    <input type="email" name="email" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                        </svg>
                                        Adresa realizace
                                    </div>
                                    <input type="text" name="address" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                            
                            <!-- Divider -->
                            <hr class="border-slate-600">
                            
                            <!-- Parameters Section -->
                            <div>
                                <h3 class="text-white font-semibold mb-4">Parametry sítí proti hmyzu</h3>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-white text-sm mb-2">Typ sítě</label>
                                        <input type="text" name="site-type" placeholder="Vyberte typ sítě" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                        </select>
                                    </div>
