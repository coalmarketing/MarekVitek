        <!-- Background Image Overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-60 z-10"></div>
        
        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/80 to-transparent z-20"></div>
        
        <div class="container m-auto relative z-30">
            <div class="max-w-2xl">
                <!-- Topper with gradient border -->
                {% if hero.topper %}
                <div class="mb-6">
                    <div class="inline-block border-gradient-custom-rounded bg-white px-6 py-3">
                        <span class="text-white font-semibold text-sm uppercase tracking-wider">{{ hero.topper }}</span>
                    </div>
                </div>
                {% endif %}

                <!-- Main heading -->
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
                    MARKÝZY
                </h1>
                
                <!-- Description -->
                <p class="text-lg text-gray-300 mb-8 leading-relaxed">
                    Realizujeme markýzy na míru
                </p>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="/kontakt/" class="inline-block px-8 py-4 bg-brand-orange text-white rounded-lg hover:bg-opacity-90 transition-all duration-300 font-semibold no-underline text-center">
                        Nezávazná poptávka
                    </a>
                    <a href="#produkty" class="inline-block px-8 py-4 border-2 border-white text-white rounded-lg hover:bg-white hover:text-gray-900 transition-all duration-300 font-semibold no-underline text-center">
                        Zobrazit produkty
