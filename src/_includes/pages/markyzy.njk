    <!-- Intersection Observer Script for Motion Animations -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Create intersection observer for motion animations
            const observerOptions = {
                threshold: 0.2,
                rootMargin: '0px 0px -100px 0px'
            };

            // Trigger animation when section comes into view
            const stepsSection = document.querySelector('[data-motion-observe]');
            if (stepsSection) {
                const sectionObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        // Get step numbers in correct order (1, 2, 3)
                        const step1 = entry.target.querySelector('.motion-step-1');
                        const step2 = entry.target.querySelector('.motion-step-2');
                        const step3 = entry.target.querySelector('.motion-step-3');
                        const stepNumbers = [step1, step2, step3].filter(el => el); // Remove null elements
                        
                        if (entry.isIntersecting) {
                            // Animate when entering viewport
                            stepNumbers.forEach((element, index) => {
                                // Set initial state
                                element.style.opacity = '0';
                                element.style.transform = 'translateX(41%) translateY(-67%) rotate(9deg) scale(1)';
                                element.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
                                
                                // Animate with delay - step 1 first (300ms), step 2 second (600ms), step 3 last (900ms)
                                setTimeout(() => {
                                    element.style.opacity = '1';
                                    element.style.transform = 'translateX(0) translateY(0) rotate(0deg) scale(1)';
                                }, (index + 1) * 300);
                            });
                        } else {
                            // Reset to initial state when leaving viewport
                            stepNumbers.forEach((element) => {
                                element.style.transition = 'none'; // Remove transition for instant reset
                                element.style.opacity = '0';
                                element.style.transform = 'translateX(41%) translateY(-67%) rotate(9deg) scale(1)';
                            });
                        }
                    });
                }, observerOptions);
                
                sectionObserver.observe(stepsSection);
            }
        });
    </script>
