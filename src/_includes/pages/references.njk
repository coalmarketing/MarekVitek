{% extends "layouts/base.njk" %}

{% block body %}
    {% set heroData = {
        topper: hero.topper,
        heading: hero.heading,
        description: hero.subtitle,
        ctaPrimary: { text: "Kontaktujte nás", href: "/kontakt/" },
        ctaSecondary: { text: "Naše produkty", href: "/produkty/" }
    } %}
    {% include "components/hero.njk" %}

    <!-- TESTIMONIALS SECTION -->
    <section class="py-24 ~px-4/8 bg-white">
        <div class="container m-auto">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <div class="mb-6">
                    <div class="inline-flex items-center bg-gradient-to-r from-brand-orange/10 to-brand-blue/10 border border-gray-200 px-6 py-3 rounded-xl">
                        <div class="w-2 h-2 bg-brand-orange rounded-full mr-3"></div>
                        <span class="text-gray-700 font-semibold text-sm uppercase tracking-wider">{{ testimonials.topper }}</span>
                    </div>
                </div>
                
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                    {{ testimonials.heading }}
                </h2>
                
                <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
                    {{ testimonials.subtitle }}
                </p>
            </div>

            <!-- Testimonials Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto" data-testimonials-grid>
                {% for testimonial in testimonials.items %}
                <article class="group bg-white rounded-2xl p-8 shadow-sm border border-gray-200 hover:shadow-xl hover:border-brand-orange/30 transition-all duration-300 hover:transform hover:-translate-y-1 relative overflow-hidden">
                    <!-- Subtle gradient overlay on hover -->
                    <div class="absolute inset-0 bg-gradient-to-br from-brand-orange/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl"></div>
                    
                    <!-- Content -->
                    <div class="relative z-10">
                        <!-- Quote Icon -->
                        <div class="mb-6">
                            <div class="w-12 h-12 bg-gradient-to-br from-brand-orange to-orange-400 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                                </svg>
                            </div>
                        </div>
                        
                        <!-- Quote Text -->
                        <blockquote class="text-gray-700 text-base leading-relaxed mb-6">
                            "{{ testimonial.quote }}"
                        </blockquote>
                        
                        <!-- Author Info -->
                        <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
                            <div class="w-12 h-12 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center flex-shrink-0 group-hover:from-brand-orange/10 group-hover:to-brand-orange/20 transition-colors duration-300">
                                <span class="text-gray-600 font-bold text-sm group-hover:text-brand-orange transition-colors duration-300">{{ testimonial.initials }}</span>
                            </div>
                            <div>
                                <div class="font-bold text-gray-900">{{ testimonial.name }}</div>
                                <div class="text-gray-500 text-sm">{{ testimonial.role }}</div>
                            </div>
                        </div>
                    </div>
                </article>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- STATS SECTION -->
    <section class="py-16 ~px-4/8 bg-gray-900 relative overflow-hidden" data-stats-observe>
        <!-- Decorative corners -->
        <div class="absolute top-4 left-4 sm:top-6 sm:left-6 md:top-8 md:left-8 lg:top-12 lg:left-12 w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16 pointer-events-none">
            <svg class="w-full h-full" fill="none" viewBox="0 0 100 100">
                <defs>
                    <linearGradient id="cornerGradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#FAB423;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#FDA085;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <path d="M 0 20 L 0 0 L 20 0" stroke="url(#cornerGradient1)" stroke-width="4" fill="none" stroke-linecap="round"/>
            </svg>
        </div>
        
        <div class="absolute bottom-4 right-4 sm:bottom-6 sm:right-6 md:bottom-8 md:right-8 lg:bottom-12 lg:right-12 w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16 pointer-events-none">
            <svg class="w-full h-full" fill="none" viewBox="0 0 100 100">
                <defs>
                    <linearGradient id="cornerGradient2" x1="100%" y1="100%" x2="0%" y2="0%">
                        <stop offset="0%" style="stop-color:#FAB423;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#FDA085;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <path d="M 100 80 L 100 100 L 80 100" stroke="url(#cornerGradient2)" stroke-width="4" fill="none" stroke-linecap="round"/>
            </svg>
        </div>
        
        <div class="container m-auto">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-6xl m-auto">
                {% for stat in stats.items %}
                <div class="text-center">
                    <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-brand-orange mb-3">
                        <span class="counter" data-target="{{ stat.number | replace('+', '') | replace('%', '') | replace('k', '000') | int }}">1</span>{% if stat.number.indexOf('+') !== -1 %}+{% endif %}{% if stat.number.indexOf('%') !== -1 %}%{% endif %}{% if stat.number.indexOf('k') !== -1 %}k{% endif %}
                    </div>
                    <div class="text-base md:text-lg font-bold text-white mb-2">{{ stat.label }}</div>
                    <p class="text-gray-300 text-sm">{{ stat.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- TRUST INDICATORS SECTION -->
    <section class="py-24 ~px-4/8 bg-gray-50">
        <div class="container m-auto">
            <!-- Section Header -->
            <div class="text-center mb-12">
                <div class="inline-block border-gradient-custom-rounded bg-white px-6 py-3 mb-6">
                    <span class="text-brand-blue font-semibold text-sm uppercase tracking-wider">{{ trust.topper }}</span>
                </div>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                    {{ trust.heading }}
                </h2>
                <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                    {{ trust.subtitle }}
                </p>
            </div>

            <!-- Trust Grid -->
            <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                {% for item in trust.items %}
                <div class="text-center p-8 rounded-xl bg-white hover:shadow-lg transition-all duration-300 group border border-gray-100">
                    <!-- Icon -->
                    <div class="w-16 h-16 bg-gradient-to-br {% if loop.index == 1 %}from-brand-orange to-orange-400{% elif loop.index == 2 %}from-brand-blue to-blue-600{% else %}from-green-500 to-green-600{% endif %} rounded-full flex items-center justify-center m-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            {% if loop.index == 1 %}
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            {% elif loop.index == 2 %}
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            {% else %}
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
                            {% endif %}
                        </svg>
                    </div>
                    
                    <h3 class="text-xl font-bold text-gray-900 mb-3">{{ item.title }}</h3>
                    <p class="text-gray-600 leading-relaxed">{{ item.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA SECTION -->
    <section class="py-24 ~px-4/8 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 relative overflow-hidden">
        <!-- Background pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-10 left-10 w-2 h-2 bg-brand-orange rounded-full animate-pulse"></div>
            <div class="absolute bottom-20 right-20 w-3 h-3 bg-white rounded-full animate-bounce"></div>
        </div>
        
        <div class="container m-auto text-center relative z-10">
            <div class="max-w-3xl mx-auto">
                <div class="mb-6">
                    <div class="inline-flex items-center bg-gradient-to-r from-brand-orange/20 to-brand-blue/20 backdrop-blur-sm border border-white/20 px-6 py-3 rounded-xl">
                        <div class="w-2 h-2 bg-brand-orange rounded-full animate-pulse mr-3"></div>
                        <span class="text-white font-semibold text-sm uppercase tracking-wider">Pojďme spolupracovat</span>
                    </div>
                </div>
                
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-6">
                    Staňte se součástí našich <span class="bg-gradient-to-r from-brand-orange to-orange-400 bg-clip-text text-transparent">spokojených zákazníků</span>
                </h2>
                <p class="text-xl text-gray-300 mb-8 leading-relaxed">
                    Kontaktujte nás pro nezávaznou konzultaci a připojte se k naší dlouhé řadě spokojených klientů.
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/kontakt/" class="group inline-flex items-center justify-center bg-gradient-to-r from-brand-orange to-orange-400 text-white px-8 py-4 rounded-xl font-bold text-lg hover:shadow-2xl hover:shadow-orange-500/25 transition-all duration-300 transform hover:-translate-y-1">
                        <span>Kontaktujte nás</span>
                        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                        </svg>
                    </a>
                    <a href="tel:+420724311719" class="group inline-flex items-center justify-center bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-white/20 transition-all duration-300">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                        <span>+420 724 311 719</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Counter Animation Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.3,
                rootMargin: '0px'
            };

            const statsSection = document.querySelector('[data-stats-observe]');
            if (statsSection) {
                const statsObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const counters = entry.target.querySelectorAll('.counter');
                            counters.forEach(counter => {
                                const target = parseInt(counter.getAttribute('data-target'));
                                const duration = 2000;
                                const increment = target / (duration / 16);
                                let current = 0;

                                const updateCounter = () => {
                                    current += increment;
                                    if (current < target) {
                                        counter.textContent = Math.floor(current);
                                        requestAnimationFrame(updateCounter);
                                    } else {
                                        counter.textContent = target;
                                    }
                                };

                                updateCounter();
                            });
                            statsObserver.unobserve(entry.target);
                        }
                    });
                }, observerOptions);

                statsObserver.observe(statsSection);
            }
        });
    </script>
{% endblock body %}
