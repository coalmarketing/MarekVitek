{% extends "layouts/base.njk" %}

{% block head %}
    <!-- Product Schema for SEO -->
    {% include "components/product-schema.njk" %}
{% endblock %}

{% block body %}
    {% set heroData = {
        topper: hero.topper,
        heading: hero.heading,
        description: hero.paragraph,
        ctaPrimary: { text: hero.ctaPrimary, href: "/kontakt/" },
        ctaSecondary: { text: hero.ctaSecondary, href: "#produkty" }
    } %}
    {% include "components/hero.njk" %}

    <!-- FEATURES SECTION -->
    <section class="py-16 ~px-4/8 bg-white">
        <div class="container m-auto">
            <!-- Section header -->
            <div class="text-center mb-12">
                <div class="inline-block border-gradient-custom-rounded bg-white px-6 py-3 mb-6">
                    <span class="text-brand-blue font-semibold text-sm uppercase tracking-wider">{{ features.topper }}</span>
                </div>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                    {{ features.heading | safe }}
                </h2>
            </div>

            <!-- Features grid -->
            <div class="grid md:grid-cols-3 gap-8 max-w-6xl m-auto">
                {% for item in features.items %}
                <div class="text-center p-6 rounded-xl hover:shadow-lg transition-all duration-300 group">
                    <!-- Icon -->
                    <div class="w-16 h-16 bg-gradient-to-br from-brand-orange to-amber-400 rounded-full flex items-center justify-center m-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        {% if item.icon == "security" %}
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                        {% elif item.icon == "energy" %}
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        {% elif item.icon == "design" %}
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
                            </svg>
                        {% endif %}
                    </div>
                    
                    <h3 class="text-xl font-bold text-gray-900 mb-4 uppercase tracking-wide">{{ item.title }}</h3>
                    <p class="text-gray-600 leading-relaxed">{{ item.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- STATISTICS SECTION -->
    <section class="py-12 md:py-16 lg:py-20 ~px-4/8 bg-gray-900 relative overflow-hidden" data-stats-observe>
        <!-- Top Left Corner Border - Responsive -->
        <div class="absolute top-4 left-4 sm:top-6 sm:left-6 md:top-8 md:left-8 lg:top-12 lg:left-12 w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16 pointer-events-none">
            <svg class="w-full h-full" fill="none" viewBox="0 0 100 100">
                <defs>
                    <linearGradient id="cornerGradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#F6D365;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#FDA085;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <path d="M0,0 L100,0 L100,3 L3,3 L3,100 L0,100 Z" fill="url(#cornerGradient1)"/>
            </svg>
        </div>
        
        <!-- Bottom Right Corner Border - Responsive -->
        <div class="absolute bottom-4 right-4 sm:bottom-6 sm:right-6 md:bottom-8 md:right-8 lg:bottom-12 lg:right-12 w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16 pointer-events-none">
            <svg class="w-full h-full" fill="none" viewBox="0 0 100 100">
                <defs>
                    <linearGradient id="cornerGradient2" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#F6D365;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#FDA085;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <path d="M100,100 L0,100 L0,97 L97,97 L97,0 L100,0 Z" fill="url(#cornerGradient2)"/>
            </svg>
        </div>
        
        <div class="container m-auto relative z-10">
            <div class="text-center mb-8 md:mb-12">
                <h2 class="text-xs sm:text-sm font-bold text-brand-orange uppercase tracking-wider mb-6 md:mb-8">{{ statistics.topper }}</h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 md:gap-10 lg:gap-12 max-w-xs sm:max-w-md md:max-w-5xl lg:max-w-6xl m-auto">
                {% for item in statistics.items %}
                <div class="text-center border border-brand-orange rounded-lg p-6 sm:p-8 hover:bg-brand-orange hover:bg-opacity-10 transition-all duration-300">
                    <div class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-brand-orange mb-3 md:mb-4">
                        <span class="counter" data-target="{{ item.number | replace('+', '') | replace('%', '') | replace('k', '000') | int }}">1</span>{% if item.number.indexOf('+') !== -1 %}+{% endif %}{% if item.number.indexOf('%') !== -1 %}%{% endif %}{% if item.number.indexOf('k') !== -1 %}k{% endif %}
                    </div>
                    <div class="text-lg sm:text-xl font-bold text-white mb-1 md:mb-2">{{ item.label }}</div>
                    <p class="text-gray-300 text-sm sm:text-base">{{ item.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- PRODUCTS GALLERY SECTION -->
    <section id="produkty" class="py-16 ~px-4/8 bg-white">
        <div class="container m-auto">
            <!-- Section header -->
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{{ products.heading }}</h2>
                <p class="text-lg text-gray-600 mb-4">{{ products.subtitle }}</p>
                <p class="text-gray-500">{{ products.description }}</p>
            </div>

            <!-- Products grid -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                {% for item in products.gallery %}
                <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 group cursor-pointer">
                    <!-- Placeholder for product image -->
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 group-hover:from-gray-200 group-hover:to-gray-300 transition-all duration-300">
                        <div class="text-center">
                            <div class="w-12 h-12 bg-brand-orange rounded-full flex items-center justify-center m-auto mb-3 opacity-60">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0h2M7 7h10M7 11h10M7 15h10"/>
                                </svg>
                            </div>
                            <p class="text-sm font-medium text-gray-600">{{ item.title }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- 3 STEPS SECTION -->
    <section class="py-24 lg:py-32 ~px-4/8 bg-gray-50" data-motion-observe>
        <div class="container m-auto">
            <!-- Section header -->
            <div class="text-center mb-16 lg:mb-20">
                <div class="inline-block border-gradient-custom-rounded bg-white px-8 py-4 mb-8">
                    <span class="text-brand-blue font-bold text-lg uppercase tracking-wider">3 KROKY K NEZÁVISLÉ CENOVÉ NABÍDCE</span>
                </div>
                <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-4">
                    Jednoduše k vaší nové garážové bráně
                </h2>
                <p class="text-lg lg:text-xl text-gray-600 max-w-2xl m-auto">
                    Jednoduchý proces od prvního kontaktu po kompletní instalaci vašich nových garážových vrat
                </p>
            </div>

            <!-- Steps grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 max-w-7xl m-auto">
                <!-- Step 1 - Contact -->
                <div class="relative p-6 lg:p-8 bg-white rounded-2xl border-2 border-gray-300 hover:shadow-lg transition-all duration-300 group">
                    <!-- Step number and icon -->
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
                        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center relative">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                            </svg>
                            <!-- Step number -->
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center motion-step-1">
                                <span class="text-white text-xs font-bold">1</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8 text-center">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 uppercase tracking-wide">KONTAKTUJTE NÁS</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">Zavolejte nám nebo vyplňte formulář. Odpovíme na všechny vaše dotazy a poradíme s výběrem.</p>
                    </div>
                </div>

                <!-- Step 2 - Measurement -->
                <div class="relative p-6 lg:p-8 bg-white rounded-2xl border-2 border-brand-orange hover:shadow-lg transition-all duration-300 group">
                    <!-- Step number and icon -->
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
                        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center relative">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                            <!-- Step number -->
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-brand-orange rounded-full flex items-center justify-center motion-step-2">
                                <span class="text-white text-sm font-bold">2</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8 text-center">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 uppercase tracking-wide">ZAMĚŘÍME ZDARMA</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">Náš technik přijede na místo, provede přesné zaměření a poradí s technickým řešením.</p>
                    </div>
                </div>

                <!-- Step 3 - Delivery & Installation -->
                <div class="relative p-6 lg:p-8 bg-white rounded-2xl border-2 border-[#06D6A0] hover:shadow-lg transition-all duration-300 group">
                    <!-- Step number and icon -->
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
                        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center relative">
                            <img src="/assets/svgs/van.svg" alt="Delivery van" class="w-8 h-8 object-contain">
                            <!-- Step number -->
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-[#06D6A0] rounded-full flex items-center justify-center motion-step-3">
                                <span class="text-white text-sm font-bold">3</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8 text-center">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 uppercase tracking-wide">DODÁME A NAMONTUJEME</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">Zajistíme dopravu, odbornou montáž a zaškolení. Vše s maximální péčí a čistotou.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CONTACT SECTION -->
    <section class="py-24 ~px-4/8 border-y ">
        <div class="container m-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
                
                <!-- LEFT SIDE - HOW TO GET QUOTE -->
                <div class="lg:col-span-1 space-y-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">{{ contact.leftSide.heading }}</h2>
                    
                    <!-- Steps -->
                    <div class="space-y-6">
                        {% for step in contact.leftSide.steps %}
                        <div class="flex gap-4 border-l-2 border-gray-800 items-center ">
                            <!-- Icon -->
                            <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center border border-gray-200 ml-2">
                                {% if step.icon == "search" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                {% elif step.icon == "form" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                {% elif step.icon == "email" %}
                                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900 mb-2">{{ step.heading }}</h3>
                                <p class="text-gray-600 text-sm">{{ step.text }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <!-- Quick Contact Box -->
                    <div class="bg-white p-6 rounded-lg border-2 border-dashed border-gray-300 text-center">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h4 class="font-semibold text-gray-900 mb-2">{{ contact.leftSide.quickContact.heading }}</h4>
                        <p class="text-gray-600 text-sm mb-4">{{ contact.leftSide.quickContact.text }}</p>
                        <a href="tel:{{ contact.leftSide.quickContact.phone }}" class="inline-block bg-brand-orange border-2 border-brand-orange text-white px-6 py-2 rounded-lg font-semibold hover:bg-transparent hover:text-brand-orange transition-colors duration-300">
                            {{ contact.leftSide.quickContact.phone }}
                        </a>
                    </div>
                </div>
                
                <!-- RIGHT SIDE - CONTACT FORM -->
                <div class="lg:col-span-2 bg-brand-blue lg:rounded-3xl rounded-2xl lg:p-6 p-2">
                    <div class="bg-brand-blue border-2 rounded-xl border-brand-orange lg:p-6 p-4">
                        <h2 class="text-2xl font-bold text-white mb-2 text-center">{{ contact.rightSide.heading }}</h2>
                        <p class="text-gray-300 text-sm mb-8 text-center">{{ contact.rightSide.subtitle }}</p>
                        
                        <form class="space-y-6" action="/kontakt/success/" method="POST" data-netlify="true" netlify>
                            <input type="hidden" name="form-name" value="garazova-vrata-contact">
                            <input type="hidden" name="subject" value="Poptávka garážová vrata - {{ title }}">
                            
                            <!-- Personal Info Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                        </svg>
                                        {{ contact.rightSide.form.nameLabel }}
                                    </div>
                                    <input type="text" name="name" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                        </svg>
                                        {{ contact.rightSide.form.phoneLabel }}
                                    </div>
                                    <input type="tel" name="phone" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                            
                            <!-- Email and Address Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                        </svg>
                                        {{ contact.rightSide.form.emailLabel }}
                                    </div>
                                    <input type="email" name="email" required class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                                <div>
                                    <div class="flex items-center text-white text-sm mb-2">
                                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                        </svg>
                                        {{ contact.rightSide.form.addressLabel }}
                                    </div>
                                    <input type="text" name="address" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                </div>
                            </div>
                            
                            <!-- Divider -->
                            <hr class="border-slate-600">
                            
                            <!-- Parameters Section -->
                            <div>
                                <h3 class="text-white font-semibold mb-4">{{ contact.rightSide.form.parametersHeading }}</h3>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.gateTypeLabel }}</label>
                                        <input type="text" name="gate-type" placeholder="{{ contact.rightSide.form.gateTypeDefault }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                    </div>
                                    <div>
                                        <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.dimensionsLabel }}</label>
                                        <input type="text" name="dimensions" placeholder="{{ contact.rightSide.form.dimensionsPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange">
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Notes -->
                            <div>
                                <label class="block text-white text-sm mb-2">{{ contact.rightSide.form.notesLabel }}</label>
                                <textarea name="notes" rows="4" placeholder="{{ contact.rightSide.form.notesPlaceholder }}" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-brand-orange focus:ring-1 focus:ring-brand-orange resize-none"></textarea>
                            </div>
                            
                            <!-- GDPR Checkbox -->
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <input type="checkbox" id="gdpr" name="gdpr" required class="mt-1 w-4 h-4 text-brand-orange bg-slate-700 border-slate-600 rounded focus:ring-brand-orange focus:ring-2">
                                    <label for="gdpr" class="text-white text-sm">{{ contact.rightSide.form.gdprText | safe }}</label>
                                </div>
                                <button type="submit" class="w-fit bg-white text-slate-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-300">
                                    {{ contact.rightSide.form.submitButton }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- Intersection Observer Script for Motion Animations -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Create intersection observer for motion animations
            const observerOptions = {
                threshold: 0.2,
                rootMargin: '0px 0px -100px 0px'
            };

            // Trigger animation when section comes into view
            const stepsSection = document.querySelector('[data-motion-observe]');
            if (stepsSection) {
                const sectionObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        // Get step numbers in correct order (1, 2, 3)
                        const step1 = entry.target.querySelector('.motion-step-1');
                        const step2 = entry.target.querySelector('.motion-step-2');
                        const step3 = entry.target.querySelector('.motion-step-3');
                        const stepNumbers = [step1, step2, step3].filter(el => el); // Remove null elements
                        
                        if (entry.isIntersecting) {
                            // Animate when entering viewport
                            stepNumbers.forEach((element, index) => {
                                // Set initial state
                                element.style.opacity = '0';
                                element.style.transform = 'translateX(41%) translateY(-67%) rotate(9deg) scale(1)';
                                element.style.transition = 'all 1.8s cubic-bezier(0.4, 0, 0.2, 1)';

                                // Animate with delay - step 1 first (500ms), step 2 second (1000ms), step 3 last (1500ms)
                                setTimeout(() => {
                                    element.style.opacity = '1';
                                    element.style.transform = 'translateX(0) translateY(0) rotate(0deg) scale(1)';
                                }, (index + 1) * 500);
                            });
                        } else {
                            // Reset to initial state when leaving viewport
                            stepNumbers.forEach((element) => {
                                element.style.transition = 'none'; // Remove transition for instant reset
                                element.style.opacity = '0';
                                element.style.transform = 'translateX(41%) translateY(-67%) rotate(9deg) scale(1)';
                            });
                        }
                    });
                }, observerOptions);
                
                sectionObserver.observe(stepsSection);
            }

            // STATISTICS COUNTER ANIMATION
            const statsSection = document.querySelector('[data-stats-observe]');
            if (statsSection) {
                let countersAnimated = false; // Prevent re-animation
                
                const statsObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && !countersAnimated) {
                            countersAnimated = true;
                            
                            // Get all counter elements
                            const counters = entry.target.querySelectorAll('.counter');
                            
                            counters.forEach((counter) => {
                                const target = parseInt(counter.getAttribute('data-target'));
                                const duration = 3000; // 3 seconds
                                const increment = target / (duration / 16); // 60fps
                                let current = 1;
                                
                                const updateCounter = () => {
                                    counter.textContent = Math.ceil(current);
                                    
                                    if (current < target) {
                                        current += increment;
                                        requestAnimationFrame(updateCounter);
                                    } else {
                                        counter.textContent = target;
                                    }
                                };
                                
                                // Start animation with a small delay for each counter
                                const delay = Array.from(counters).indexOf(counter) * 200;
                                setTimeout(() => {
                                    updateCounter();
                                }, delay);
                            });
                        }
                    });
                }, observerOptions);
                
                statsObserver.observe(statsSection);
            }
        });
