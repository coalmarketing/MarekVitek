{# 
  Reusable Hero Component
  
  Expects a heroData object with:
  - topper: String for the top label
  - heading: String for H1 (can include HTML for gradient text)
  - description: String for paragraph text
  - ctaPrimary: Object { text, href } for primary button
  - ctaSecondary: Object { text, href } (optional) for secondary button
#}

<!-- HERO SECTION -->
<section class="relative py-24 ~px-4/8 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden min-h-[700px] flex items-center">
    <!-- Animated Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="absolute top-10 left-10 w-2 h-2 bg-brand-orange rounded-full animate-pulse"></div>
        <div class="absolute top-32 right-16 w-1 h-1 bg-brand-blue rounded-full animate-ping"></div>
        <div class="absolute bottom-20 left-1/4 w-3 h-3 bg-white rounded-full animate-bounce"></div>
        <div class="absolute bottom-40 right-20 w-1 h-1 bg-brand-orange rounded-full animate-pulse"></div>
        <div class="absolute top-1/2 right-1/3 w-2 h-2 bg-brand-blue rounded-full animate-ping"></div>
    </div>
    
    <!-- Gradient Overlays -->
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/90 to-transparent z-10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-transparent to-gray-900/40 z-10"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-brand-orange/10 to-transparent rounded-full blur-3xl -translate-y-32 translate-x-32"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-brand-blue/10 to-transparent rounded-full blur-3xl translate-y-32 -translate-x-32"></div>
    
    <div class="container m-auto relative z-30">
        <div class="grid lg:grid-cols-12 gap-12 items-center">
            <!-- Left Content -->
            <div class="lg:col-span-7">
                <!-- Enhanced Topper -->
                <div class="mb-8">
                    <div class="inline-flex items-center bg-gradient-to-r from-brand-orange/20 to-brand-blue/20 backdrop-blur-sm border border-white/20 px-6 py-3 rounded-xl">
                        <div class="w-2 h-2 bg-brand-orange rounded-full animate-pulse mr-3"></div>
                        <span class="text-white font-semibold text-sm uppercase tracking-wider">{{ heroData.topper }}</span>
                    </div>
                </div>

                <!-- Enhanced Main heading -->
                <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
                    {{ heroData.heading | safe }}
                </h1>
                
                <!-- Enhanced Description -->
                <p class="text-xl text-gray-300 mb-10 leading-relaxed max-w-2xl">
                    {{ heroData.description }}
                </p>
                
                <!-- Enhanced CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 mb-12">
                    {% if heroData.ctaPrimary %}
                    <a href="{{ heroData.ctaPrimary.href }}" class="group inline-flex items-center justify-center bg-gradient-to-r from-brand-orange to-orange-400 text-white px-8 py-4 rounded-xl font-bold text-lg hover:shadow-2xl hover:shadow-orange-500/25 transition-all duration-300 transform hover:-translate-y-1">
                        <span>{{ heroData.ctaPrimary.text }}</span>
                        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                        </svg>
                    </a>
                    {% endif %}
                    
                    {% if heroData.ctaSecondary %}
                    <a href="{{ heroData.ctaSecondary.href }}" class="group inline-flex items-center justify-center bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-white/20 transition-all duration-300">
                        <span>{{ heroData.ctaSecondary.text }}</span>
                        <svg class="w-5 h-5 ml-2 group-hover:translate-y-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                        </svg>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
