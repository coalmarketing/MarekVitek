<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "@id": "{{ client.domain }}/#organization",
        "name": "{{ client.name }}",
        "alternateName": "Marek Vítek - vrata a brány",
        "description": "{{ client.description }}",
        "foundingDate": "2008",
        {% if preloadImg %}"image": "{{ client.domain }}{{ preloadImg }}",{% endif %}
        "logo": {
            "@type": "ImageObject",
            "url": "{{ client.domain }}/assets/svgs/MarekVitek.svg",
            "width": "300",
            "height": "100"
        },
        "url": "{{ client.domain }}{{ page.url }}",
        {% if client.phoneFormatted %}"telephone": "{{ client.phoneFormatted }}",{% endif %}
        {% if client.email %}"email": "{{ client.email }}",{% endif %}
        "priceRange": "$$",
        "paymentAccepted": "Cash, Credit Card, Bank Transfer",
        "currenciesAccepted": "CZK",
        "areaServed": [
            {
                "@type": "GeoCircle",
                "geoMidpoint": {
                    "@type": "GeoCoordinates",
                    "latitude": "50.08035",
                    "longitude": "16.45937"
                },
                "geoRadius": "50000"
            },
            {
                "@type": "City",
                "name": "Ústí nad Orlicí"
            },
            {
                "@type": "City", 
                "name": "Žamberk"
            },
            {
                "@type": "City",
                "name": "Letohrad"
            }
        ],
        "serviceArea": {
            "@type": "GeoCircle",
            "geoMidpoint": {
                "@type": "GeoCoordinates",
                "latitude": "50.08035",
                "longitude": "16.45937"
            },
            "geoRadius": "50000"
        },
        {% if client.address %}
            "address": {
                "@type": "PostalAddress"{%- if client.address.lineTwo -%},
                    "streetAddress": "{{ client.address.lineTwo }}"
                {%- endif -%}
                {%- if client.address.city -%},
                    "addressLocality": "{{ client.address.city }}"
                {%- endif -%}
                {%- if client.address.zip -%},
                    "postalCode": "{{ client.address.zip }}"
                {%- endif -%}
                {%- if client.address.district -%},
                    "addressRegion": "{{ client.address.district }}"
                {%- endif -%},
                    "addressCountry": "CZ"
            },
        {% endif %}
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "50.08035",
            "longitude": "16.45937"
        },
        "hasMap": "{{ client.address.mapLink }}",
        "openingHours": [
            "Mo-Fr 08:00-17:00",
            "Sa 08:00-12:00"
        ],
        "openingHoursSpecification": [
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": [
                    "Monday",
                    "Tuesday", 
                    "Wednesday",
                    "Thursday",
                    "Friday"
                ],
                "opens": "08:00",
                "closes": "17:00"
            },
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": "Saturday",
                "opens": "08:00", 
                "closes": "12:00"
            }
        ],
        "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "reviewCount": "47",
            "bestRating": "5",
            "worstRating": "1"
        },
        "review": [
            {
                "@type": "Review",
                "author": {
                    "@type": "Person",
                    "name": "Pavel Novák"
                },
                "reviewRating": {
                    "@type": "Rating",
                    "ratingValue": "5",
                    "bestRating": "5"
                },
                "reviewBody": "Výborná práce, rychlá montáž garážových vrat. Doporučuji!"
            }
        ],
        "makesOffer": [
            {
                "@type": "Offer",
                "itemOffered": {
                    "@type": "Service",
                    "name": "Garážová vrata Hörmann",
                    "description": "Dodávka a montáž garážových vrat včetne servisu"
                }
            },
            {
                "@type": "Offer", 
                "itemOffered": {
                    "@type": "Service",
                    "name": "Vjezdové brány",
                    "description": "Automatické vjezdové brány a pohony"
                }
            },
            {
                "@type": "Offer",
                "itemOffered": {
                    "@type": "Service", 
                    "name": "Rolety a žaluzie",
                    "description": "Venkovní a vnitřní stínicí technika"
                }
            }
        ],
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Produkty a služby",
            "itemListElement": [
                {
                    "@type": "OfferCatalog",
                    "name": "Garážová vrata",
                    "url": "{{ client.domain }}/produkty/garazova-vrata/"
                },
                {
                    "@type": "OfferCatalog", 
                    "name": "Vjezdové brány",
                    "url": "{{ client.domain }}/produkty/brany/"
                },
                {
                    "@type": "OfferCatalog",
                    "name": "Rolety", 
                    "url": "{{ client.domain }}/produkty/rolety/"
                },
                {
                    "@type": "OfferCatalog",
                    "name": "Žaluzie",
                    "url": "{{ client.domain }}/produkty/zaluzie/"
                }
            ]
        },
        {% if client.socials %}
            "sameAs": [{%- for platform, url in client.socials -%}
                    {% if not loop.first %},{% endif %}"{{ url }}"
                {%- endfor -%}]
        {% endif %}
    }
</script>