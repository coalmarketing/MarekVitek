<footer class="py-16 ~px-4/8 bg-gray-50 border-t border-gray-200">
    <div class="container m-auto">
        <!-- Main Footer Content -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-12">
            
            <!-- Left Side - Company Info -->
            <div class="lg:col-span-1">
                <!-- Logo -->
                <div class="flex items-center mb-6">
                    <img src="/assets/svgs/MarekVitek.svg" alt="{{ client.name }} logo" class="h-12 w-12 mr-4" decoding="async" loading="eager">
                    <div>
                        <h3 class="font-bold text-gray-900 text-lg">{{ client.name }}</h3>
                        <p class="text-gray-600 text-sm">{{ client.tagline }}</p>
                    </div>
                </div>
                
                <!-- Description -->
                <p class="text-gray-600 text-sm mb-6 leading-relaxed">
                    {{ client.description }}
                </p>
                
                <!-- Hörmann Partner Badge -->
                <div class="inline-block">
                    <div class="bg-white px-4 py-2 rounded-lg border border-gray-200">
                        <p class="text-xs text-gray-500 mb-1">Exkluzivní partner</p>
                        <p class="font-bold text-brand-orange text-lg">HÖRMANN</p>
                    </div>
                </div>
            </div>
            
            <!-- Center - Contact Information -->
            <div class="lg:col-span-1">
                <h4 class="font-bold text-gray-900 text-lg mb-6">Kontaktní informace</h4>
                
                <div class="space-y-4">
                    <!-- Phone -->
                    <div class="flex items-start gap-3">
                        <div class="w-5 h-5 mt-0.5 flex-shrink-0">
                            <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                            </svg>
                        </div>
                        <a href="tel:{{ client.phoneForTel }}" class="text-gray-700 hover:text-brand-orange transition-colors">
                            {{ client.phoneFormatted }}
                        </a>
                    </div>
                    
                    <!-- Email -->
                    <div class="flex items-start gap-3">
                        <div class="w-5 h-5 mt-0.5 flex-shrink-0">
                            <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                        </div>
                        <a href="mailto:{{ client.email }}" class="text-gray-700 hover:text-brand-orange transition-colors">
                            {{ client.email }}
                        </a>
                    </div>
                    
                    <!-- Address -->
                    <div class="flex items-start gap-3">
                        <div class="w-5 h-5 mt-0.5 flex-shrink-0">
                            <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="text-gray-700">
                            <p>{{ client.address.lineOne }}</p>
                            <p>{{ client.address.lineTwo }}</p>
                            <p>{{ client.address.city }}, {{ client.address.zip }}</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Map -->
            <div class="lg:col-span-1">
                <h4 class="font-bold text-gray-900 text-lg mb-6">Mapa</h4>
                
                <!-- Google Maps Embed -->
                <div class="rounded-lg overflow-hidden border border-gray-300">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2560.3170647093757!2d16.45937447656135!3d50.08035031394272!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470de4a3adfd4a27%3A0xb0a3f5e867069431!2zTsOhZHJhxb5uw60gODI0LCA1NjQgMDEgxb1hbWJlcms!5e0!3m2!1scs!2scz!4v1766955286602!5m2!1scs!2scz" 
                           width="100%" 
                           height="192" 
                           style="border:0;" 
                           allowfullscreen="" 
                           loading="lazy" 
                           referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
        
        <!-- Bottom Footer -->
        <div class="border-t border-gray-300 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <!-- Copyright -->
                <p class="text-gray-600 text-sm">
                    © 2025 {{ client.name }}. Všechna práva vyhrazena.
                </p>
                
                <!-- Links -->
                <div class="flex gap-6">
                    <a href="/gdpr/" class="text-gray-600 text-sm hover:text-brand-orange transition-colors underline">
                        Ochrana osobních údajů
                    </a>
                    <a href="/obchodni-podminky/" class="text-gray-600 text-sm hover:text-brand-orange transition-colors underline">
                        Obchodní podmínky
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>